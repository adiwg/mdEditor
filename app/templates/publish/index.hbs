<h3 class='text-info'>Click to choose a publishing service:</h3>

<div class='list-group'>
  {{#each this.model as |catalog|}}
    <LinkTo @route={{concat 'publish.' catalog.route}} class='list-group-item'>
      <div class='media'>
        <div class='media-left media-middle'>
          {{#if catalog.image}}
            <img
              class='media-object fa-fw fa-5x'
              src={{catalog.image}}
              alt='{{catalog.title}} icon'
            />
          {{else}}
            <FlightIcon
              @name={{if catalog.icon catalog.icon 'list'}}
              class='text-info'
            />
          {{/if}}
        </div>
        <div class='media-body'>
          {{! <h4 >Middle aligned media</h4> }}
          <h1 class='media-heading'>{{catalog.name}}</h1>
          <p class='text-muted'>{{catalog.description}}</p>
        </div>
      </div>
    </LinkTo>
  {{else}}
    <div class='card card-inverse card-warning'>
      <div class='card-block'>
        <h4 class='card-title'>
          <FlightIcon @name='alert-triangle' />
          No Services Available!
        </h4>
        <p class='card-text'>No publication services have been configured.
          Contact your technical support for assistance.</p>
      </div>
    </div>
  {{/each}}
</div>