<div class='row md-no-spotlight'>
  {{#with this.model.json.dataDictionary as |dictionary|}}
    <div class='col-sm-9 col-md-offset-1'>
      <h3>
        <FlightIcon @name='docs' />
        Viewing Dictionary:
        {{this.model.title}}
        <Control::MdStatus @model={{this.model}} />
      </h3>

      <Layout::MdCard
        @shadow={{false}}
        @muted={{true}}
        @title='Main'
        @bodyIsRow={{false}}
        @collapsible={{true}}
        @btnText='Edit'
        @btnClass='success'
        @btnAction={{route-action 'linkTo' 'dictionary.show.edit'}}
        @btnIcon='pencil-tool'
        @data-spy='Main'
      >
        <div class='row'>
          <dl class='dl-horizontal col-xxl-6'>
            <Control::MdDefinition
              @title='Dictionary Id'
              @text={{this.model.json.dictionaryId}}
            />
            <Control::MdDefinition
              @title='Dictionary Title'
              @text={{this.model.title}}
            />
            <Control::MdDefinition
              @title='Subject'
              @text={{if dictionary.subject (join ', ' dictionary.subject)}}
            />
          </dl>
          <dl class='dl-horizontal col-xxl-6'>
            <Control::MdDefinition @title='Responsible Party'>
              {{#with dictionary.responsibleParty as |party|}}
                {{html-safe
                  (if party.role party.role '<em>No Roles assigned.</em>')
                }}
                (
                {{#each party.party as |contact index|}}
                  {{if index ', '}}
                  <Control::MdContactLink @contactId={{contact.contactId}} />
                {{else}}
                  <em class='text-muted'>No Contacts assigned.</em>
                {{/each}}
                )
                <br />
              {{else}}
                <em class='text-muted'>No responsibility assigned.</em>
              {{/with}}
            </Control::MdDefinition>
          </dl>
          <div class='col-xs-12'>
            <Layout::MdCard @shadow={{false}} @muted={{true}} @plain={{true}}>
              <div class='row'>
                <div class='text-info col-xs-6 col-sm-3'>Locale</div>
                <div class='col-xs-6 col-sm-3'>
                  <label class='text-nowrap'>Character Set:</label>
                  <span class='text-nowrap'>{{get-property
                      dictionary.locale
                      'characterSet'
                    }}</span>
                </div>
                <div class='col-xs-6 col-sm-3'>
                  <label>Country:</label>
                  <span class='text-nowrap'>{{get-property
                      dictionary.locale
                      'country'
                    }}</span>
                </div>
                <div class='col-xs-6 col-sm-3'>
                  <label>Language:</label>
                  <span>{{get-property dictionary.locale 'language'}}</span>
                </div>
              </div>
            </Layout::MdCard>
          </div>
        </div>

        <Layout::MdCard
          @shadow={{false}}
          @muted={{true}}
          @title='Description'
          @collapsible={{true}}
          @scroll={{true}}
          @maximizable={{true}}
          @class='md-embedded'
        >
          {{md-markdown dictionary.description 'Description not provided!'}}
        </Layout::MdCard>

      </Layout::MdCard>

      <Object::MdCitation::Preview
        @profilePath='dictionary.main.citation'
        @citation={{dictionary.citation}}
        @muted={{true}}
        @editCitation={{route-action 'editCitation'}}
        @data-spy='Citation'
      />

      <Layout::MdCard
        @shadow={{false}}
        @muted={{true}}
        @title='Domains'
        @bodyIsRow={{false}}
        @collapsible={{true}}
        @btnText='Edit'
        @btnClass='success'
        @btnAction={{route-action 'linkTo' 'dictionary.show.edit.domain'}}
        @btnIcon='pencil-tool'
        @data-spy='Domains'
      >
        {{#if dictionary.domain}}
          <table class='table table-striped'>
            <thead>
              <tr>
                <th>#</th>
                {{! <th>domainId</th> }}
                <th>Name</th>
                <th>Description</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each dictionary.domain as |domain index|}}
                <tr>
                  <th scope='row'>{{index}}</th>
                  {{!-- <td>{{domain.domainId}}</td> --}}
                  <td>{{get-property domain 'codeName'}}</td>
                  <td>{{#if domain.description}}
                      {{word-limit domain.description}}
                    {{else}} <em>Not Described</em>{{/if}}</td>
                  <td><LinkTo
                      @route='dictionary.show.edit.domain.edit'
                      @model={{index}}
                      class='btn btn-xs btn-success'
                    >Edit</LinkTo></td>

                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <div class='alert alert-info'>
            <h3>No Domains found.
            </h3>
          </div>
        {{/if}}
      </Layout::MdCard>

      <Layout::MdCard
        @shadow={{false}}
        @muted={{true}}
        @title='Entities'
        @bodyIsRow={{false}}
        @collapsible={{true}}
        @btnText='Edit'
        @btnClass='success'
        @btnAction={{route-action 'linkTo' 'dictionary.show.edit.entity'}}
        @btnIcon='pencil-tool'
        @data-spy='Entities'
      >
        {{#if dictionary.entity}}
          <table class='table table-striped'>
            <thead>
              <tr>
                <th>#</th>
                {{! <th>entityId</th> }}
                <th>Name</th>
                <th>Description</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each dictionary.entity as |entity index|}}
                <tr>
                  <th scope='row'>{{index}}</th>
                  {{!-- <td>{{entity.entityId}}</td> --}}
                  <td>{{get-property entity 'codeName'}}</td>
                  <td>{{#if entity.description}}
                      {{word-limit entity.description}}
                    {{else}} <em>Not Described</em>{{/if}}</td>
                  <td><LinkTo
                      @route='dictionary.show.edit.entity.edit'
                      @model={{index}}
                      class='btn btn-xs btn-success'
                    >Edit</LinkTo></td>

                </tr>

              {{/each}}
            </tbody>
          </table>
        {{else}}
          <div class='alert alert-info'>
            <h3>No Entities found.
            </h3>
          </div>
        {{/if}}
      </Layout::MdCard>
    </div>
  {{/with}}

  <div class='md-control-sidebar col-sm-2 no-nav'>
    <Control::MdCrudButtons
      @model={{this.model}}
      @allowCopy={{true}}
      @allowDelete={{true}}
      @doDelete={{route-action 'destroyDictionary'}}
      @doCopy={{route-action 'copyDictionary'}}
    >
      <LinkTo
        @route='dictionary.show.edit'
        @model={{this.model.id}}
        class='btn btn-lg btn-success'
      >
        <FlightIcon @name='pencil-tool' />
        Edit</LinkTo>
    </Control::MdCrudButtons>
    <hr />
    <LinkTo @route='dictionaries' class='btn btn-lg btn-primary btn-block'>
      <FlightIcon @name='list' />
      Show List</LinkTo>
    <Control::MdScrollSpy
      @scrollInit={{this.scrollTo}}
      @setScrollTo={{route-action 'setScrollTo'}}
    />
  </div>
</div>