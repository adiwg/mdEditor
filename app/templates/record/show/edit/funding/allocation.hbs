<h4 class='section-header'>
  Editing Funding Period #{{this.allocationId}}
  <Control::MdStatus @model={{this.parentModel}} />
</h4>

<Object::MdFunding
  @model={{this.model}}
  @profilePath='record.funding.fundingPeriod'
/>

<ToElsewhere
  @named='md-subbar-extra'
  @send={{component
    'control/subbar-link'
    text='Back to Funding List'
    icon='arrow-left'
    route='record.show.edit.funding'
  }}
/>

<ToElsewhere
  @named='md-scroll-spy-record-edit'
  @send={{component
    'control/md-scroll-spy'
    scrollInit=this.scrollTo
    setScrollTo=(route-action 'setScrollTo')
  }}
/>