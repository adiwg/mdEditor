<h4 class='section-header'>
  Editing Taxonomy Collection #{{this.collectionId}}
  <Control::MdStatus @model={{this.parentModel}} />
</h4>

<Object::MdTaxonomy::Collection
  @model={{this.model}}
  @id={{this.collectionId}}
  @profilePath='record.taxonomy.collection'
  @editSystem={{route-action 'editSystem'}}
/>

<ToElsewhere
  @named='md-subbar-buttons'
  @send={{component
    'control/md-button'
    text='Add New Taxa'
    icon='plus'
    class='btn-info btn-lg'
    click=(route-action 'addTaxa')
  }}
/>
<ToElsewhere
  @named='md-subbar-buttons'
  @send={{component
    'control/md-button'
    text='Add Taxa from ITIS'
    icon='plus'
    class='btn-success btn-lg'
    click=(route-action 'addITIS')
  }}
/>
<ToElsewhere
  @named='md-subbar-buttons'
  @send={{component
    'control/md-button'
    text='Back to List'
    icon='arrow-left'
    class='btn-primary btn-lg'
    click=(route-action 'toList')
  }}
/>

<ToElsewhere
  @named='md-scroll-spy-record-edit'
  @send={{component
    'control/md-scroll-spy'
    scrollInit=this.scrollTo
    setScrollTo=(route-action 'setScrollTo')
  }}
/>