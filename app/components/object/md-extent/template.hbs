<Layout::MdObjectContainer
  @title={{this.title}}
  @index={{this.index}}
  @deleteItem={{this.deleteExtent}}
  @profilePath={{this.profilePath}}
>

  <Input::MdTextarea
    @value={{this.extent.description}}
    @rows={{3}}
    @maxHeight={{300}}
    @placeholder='Description of extent'
    @label='Extent Description'
    @isCollapsible={{true}}
    @profilePath={{concat this.profilePath '.description'}}
  />

  <Object::MdExtent::Spatial
    @extent={{this.extent}}
    @index={{this.index}}
    @editFeatures={{this.editFeatures}}
    @profilePath={{concat this.profilePath '.geographic'}}
  />

  <Object::MdObjectTable
    @items={{this.extent.verticalExtent}}
    @header='Vertical Extents'
    @buttonText='Add Vertical Extent'
    @ellipsis={{true}}
    @required={{false}}
    @profilePath={{concat this.profilePath '.verticalExtent'}}
    @attributes='description,minValue,maxValue'
    as |editing|
  >
    <Object::MdExtent::Vertical
      @model={{editing}}
      @profilePath={{concat this.profilePath '.verticalExtent'}}
    />
  </Object::MdObjectTable>

  <Object::MdObjectTable
    @items={{this.extent.temporalExtent}}
    @header='Temporal Extents'
    @buttonText='Add Temporal Extent'
    @ellipsis={{true}}
    @required={{false}}
    @profilePath={{concat this.profilePath '.temporalExtent'}}
    @attributes='description'
    as |editing|
  >
    <Object::MdTimePeriod
      @model={{editing}}
      @profilePath={{concat this.profilePath '.temporalExtent'}}
    />
  </Object::MdObjectTable>

</Layout::MdObjectContainer>