<td class='property'>
  <Input::MdInput
    @model={{this}}
    @valuePath='name'
    @placeholder='Descriptive name for the domain value.'
    @profilePath={{concat this.profilePath '.domainItem.name'}}
    @showValidations={{true}}
  />
</td>
<td class='property'>
  <Input::MdInput
    @model={{this}}
    @valuePath='value'
    @placeholder='Value of the domain item.'
    @profilePath={{concat this.profilePath '.domainItem.value'}}
    @showValidations={{true}}
  />
</td>
<td class='property'>
  <Input::MdInput
    @model={{this}}
    @valuePath='definition'
    @placeholder='A brief definition for the domain item.'
    @profilePath={{concat this.profilePath '.domainItem.definition'}}
    @showValidations={{true}}
  />
</td>