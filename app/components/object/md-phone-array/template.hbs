<Object::MdArrayTable
  @columns='Name,Number,Services'
  @title='Phone'
  @value={{this.value}}
  @validation={{this.validation}}
  @data-spy={{null}}
  @templateClass={{this.templateClass}}
  as |phone|
>
  <td>
    <Input::MdInput
      @value={{phone.item.phoneName}}
      @placeholder='Name or location or phone'
    />
  </td>
  <td>
    <Input::MdInput
      @valuePath='phoneNumber'
      @model={{phone.item}}
      @showValidations={{true}}
      @placeholder='Phone number'
    />
  </td>
  <td>
    <Input::MdCodelistMulti
      @create={{true}}
      @tooltip={{true}}
      @icon={{false}}
      @disabled={{this.disabled}}
      @allowClear={{true}}
      @mdCodeName='telephone'
      @value={{phone.item.service}}
      @placeholder='Choose phone type'
    />
  </td>
</Object::MdArrayTable>