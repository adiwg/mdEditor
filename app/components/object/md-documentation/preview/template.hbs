{{#with this.item as |model|}}
  <dl class='dl-horizontal'>
    <dt>
      <h4 class='text-info'>Document #{{this.index}}</h4>
    </dt>
    <dd></dd>
    <Control::MdDefinition @title='Resource Type(s)'>
      {{#each model.resourceType as |type|}}
        {{type.type}}:
        {{#if type.name}}
          {{type.name}}
        {{else}}
          <em>Not named</em>
        {{/if}}
        <br />
      {{else}}
        <em class='text-muted'>No types assigned!</em>
      {{/each}}
    </Control::MdDefinition>
  </dl>

  <Object::MdCitation::Preview::Body @citation={{object-at 0 model.citation}} />
{{/with}}