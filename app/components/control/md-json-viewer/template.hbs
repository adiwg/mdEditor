{{#if this.modal}}
  <ModalDialog
    @onClose={{action 'closeModal'}}
    @translucentOverlay={{true}}
    @containerClass='md-jsmodal-container'
    @overlayClass='md-modal-overlay'
    @attachment='top center'
    @targetAttachment='top center'
    @tetherTarget='html'
  >
    <button
      type='button'
      {{action 'closeModal'}}
      class='md-modal-close'
      aria-label='Close'
    >
      <FlightIcon @name='x-circle' />
    </button>
    <div class='md-viewer-body'></div>
  </ModalDialog>
{{else}}
  <div class='well'>
    <div class='btn-toolbar md-viewer-controls pull-right'>
      <div
        class='btn-group-vertical'
        role='group'
        aria-label='JSON viewer controls'
      >
        <button
          type='button'
          class='btn btn-primary'
          {{action 'expand'}}
          title='Expand All'
        >
          <FlightIcon @name='plus' />
        </button>
        <button
          type='button'
          class='btn btn-default'
          {{action 'collapse'}}
          title='Collapse All'
        >
          <FlightIcon @name='minus' />
        </button>
      </div>
      <div
        class='btn-group-vertical'
        role='group'
        aria-label='JSON viewer controls'
      >
        <button
          type='button'
          class='btn btn-primary'
          {{action 'zoomin'}}
          title='Zoom in'
        >
          <FlightIcon @name='search' />
        </button>
        <button
          type='button'
          class='btn btn-default'
          {{action 'zoomout'}}
          title='Zoom Out'
        >
          <FlightIcon @name='zoom-out' />
        </button>
      </div>
    </div>
    <div class='md-viewer-body'>
    </div>
  </div>
{{/if}}