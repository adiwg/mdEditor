<FlightIcon @name={{this.icon}} />

<EmberPopover
  @popoverHideDelay={{this.popoverHideDelay}}
  @popperContainer={{this.popperContainer}}
  @tooltipClass={{concat 'md-tooltip ' this.type}}
  @event={{this.event}}
>
  {{#if this.title}}
    <h4 class='title'>
      {{#if this.icon}}
        <FlightIcon @name={{this.icon}} />
      {{/if}}
      {{this.title}}
    </h4>
  {{/if}}
  <span>{{this.interpolated}}</span>
  {{yield}}
</EmberPopover>