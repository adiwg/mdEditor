{{#if this.label}}
  <label>{{this.label}}</label>
{{/if}}

<div class='md-input-input'>
  <div class="input-group">
    <EmberFlatpickr
      @date={{this.currentValue}}
      @options={{this.flatpickrOptions}}
      @placeholder={{this.placeholder}}
      @disabled={{this.disabled}}
      @onChange={{this.onDateChange}}
      class="form-control"
    />

    {{#if this.showClear}}
      <div class="input-group-btn">
        <button
          type="button"
          class="btn btn-default"
          onclick={{this.clearDate}}
          disabled={{this.disabled}}
          title="Clear date"
        >
          <FaIcon @icon="times" />
        </button>
      </div>
    {{/if}}
  </div>

  <span class='md-inputgroup-error'>
    {{#if this.showErrorMessage}}
      <span class='md-error'>
        <FaIcon @icon='circle-exclamation' />
        <EmberTooltip @side="right" @tooltipClass="ember-tooltip md-tooltip danger">
          {{v-get this.model this.valuePath 'message'}}
        </EmberTooltip>
      </span>
    {{/if}}

    {{#if this.showWarningMessage}}
      <span class='md-warning'>
        <FaIcon @icon='triangle-exclamation' />
        <EmberTooltip @side="right" @tooltipClass="ember-tooltip md-tooltip warning">
          {{v-get this.model this.valuePath 'warningMessage'}}
        </EmberTooltip>
      </span>
    {{/if}}
  </span>
</div>