{{#each this.column.buttons as |btn|}}
  {{#if btn.confirm}}
    <Control::MdButtonConfirm
      @class={{concat 'btn btn-sm btn-' btn.type}}
      @onConfirm={{action
        btn.action
        this.column
        this.index
        this.record
        target=btn.target
      }}
    >
      <FlightIcon @name={{btn.icon}} />
      {{btn.title}}
    </Control::MdButtonConfirm>
  {{else}}
    <button
      type='button'
      class='btn btn-sm btn-{{btn.type}}'
      onclick={{action
        btn.action
        this.column
        this.index
        this.record
        target=btn.target
      }}
    >
      <FlightIcon @name={{btn.icon}} />
      {{btn.title}}
    </button>
  {{/if}}
{{/each}}

<div class='btn-group text-center' role='group' aria-label='Row Error'>
  {{#if this.record.validations.isInvalid}}
    <span class='md-error'>
      <FlightIcon @name='alert-circle' />
      <EmberTooltip
        @side='right'
        @tooltipClass='ember-tooltip md-tooltip danger'
      >
        This item has errors.
      </EmberTooltip>
    </span>
  {{else if this.record.validations.hasWarnings}}
    <span class='md-warning'>
      <FlightIcon @name='alert-triangle' />
      <EmberTooltip
        @side='right'
        @tooltipClass='ember-tooltip md-tooltip warning'
      >
        This item has warnings.
      </EmberTooltip>
    </span>
  {{/if}}
  {{#each this.column.badges as |badge|}}
    {{#if (get this.record badge.isVisible)}}
      <span class='md-{{badge.type}}'>
        <FlightIcon @name={{badge.icon}} />
        <EmberTooltip
          @side='right'
          @tooltipClass={{concat 'ember-tooltip md-tooltip ' badge.type}}
          @text={{badge.tip}}
        />
      </span>
    {{/if}}
  {{/each}}
</div>