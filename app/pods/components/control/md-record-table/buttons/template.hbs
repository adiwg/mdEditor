<Control::MdJsonButton
  @class='btn-sm btn-primary'
  @json={{this.record.cleanJson}}
  @title={{this.record.title}}
/>
<Control::MdStatus
  @model={{this.record}}
  @isBtn={{true}}
  @hideSlider={{true}}
  @showSlider={{action 'showSlider' this.record}}
/>
{{yield}}