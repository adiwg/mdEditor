<Control::MdRecordTable::Buttons::Show @record={{this.record}} />
<button type="button" class="btn btn-sm btn-success" onclick={{action "editItem" this.record}}>
  {{fa-icon "pencil"}} Edit
</button>
<Control::MdButtonConfirm class="btn btn-sm btn-danger" @onConfirm={{action "deleteItem" this.record this.index this.isSelected this.clickOnRow}}>
  <span class="fa fa-times"></span> Delete
</Control::MdButtonConfirm>
