{{#if this.isShowing}}
  <ModalDialog @onClose={{action "closeModal"}} @translucentOverlay={{true}} @containerClass="md-modal-container" @overlayClass="md-modal-overlay" @renderInPlace={{this.renderInPlace}} @tagName="div">
    <button type="button" {{action "closeModal"}} class="md-modal-close" aria-label="Close">
      <span class="fa-stack">
          <FaIcon @icon="circle" @size="2x" />
          <FaIcon @icon="times" class="fa-inverse" />
        </span>
    </button>
    <div class="md-modal-body">
      {{yield}} {{html-safe this.message}}
    </div>
    <div class="md-modal-buttons pull-right">
      {{#if this.showConfirm}}
        <button type="button" class="btn btn-success" {{on "click" this.confirm}}>{{this.confirmLabel}}</button>
      {{/if}}
      {{#if this.showCancel}}
        <button type="button" class="btn btn-warning" {{on "click" this.cancel}}>Cancel</button>
      {{/if}}
    </div>
  </ModalDialog>
{{/if}}
