{{#liquid-if isShowingConfirm use="toDown"}}
  <i class="fa fa-question"></i> Confirm
{{else}}
  {{yield}}
{{/liquid-if}}

{{#if isShowingConfirm}}
  {{#if tooltip}}
    <EmberTooltip @tooltipClass={{concat "ember-tooltip md-tooltip " tipClass}} @text={{tooltip}} @side={{tipSide}} />
  {{/if}}
{{/if}}
