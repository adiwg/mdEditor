<hr />
<div
  class='btn-group-vertical center-block'
  role='group'
  aria-label='Geographic Extent Button Controls'
>
  <button
    type='button'
    class='btn btn-lg btn-success btn-block md-btn-responsive'
    {{action 'zoomAll'}}
  >
    <FlightIcon @name='search' />
    Zoom All</button>
  <button
    type='button'
    class='btn btn-lg btn-warning btn-block md-btn-responsive'
    {{action 'uploadData'}}
  >
    <FlightIcon @name='upload' />
    Import Features
  </button>
  <button
    type='button'
    class='btn btn-lg btn-info btn-block md-btn-responsive'
    {{action 'exportGeoJSON'}}
  >
    <FlightIcon @name='download' />
    Export Features
  </button>
  <Control::MdButtonConfirm
    @class='btn btn-lg btn-danger btn-block md-btn-responsive'
    @onConfirm={{action 'deleteAllFeatures'}}
  >
    <FlightIcon @name='x' />
    Delete All
  </Control::MdButtonConfirm>
</div>
<hr />
<button
  type='button'
  class='btn btn-lg btn-primary btn-block md-btn-responsive'
  {{action 'toList'}}
>
  <FlightIcon @name='list' />
  Back to List
</button>
{{yield}}