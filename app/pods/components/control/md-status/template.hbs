{{#if this.model.hasDirtyHash}}
<span role="button" class="md-status-icon" {{on "click" this.saveRecord}}>
  {{fa-icon "exclamation-circle" class=(if this.isBtn (concat "btn btn-danger btn-" this.btnSize) "md-error")}}
  {{ember-tooltip text="This record has been modified! Click to save." side="top"
    tooltipClass="ember-tooltip md-tooltip danger"
  }}
</span>
{{/if}}

{{#if this.model.hasSchemaErrors}}
<span role="button" class="md-status-icon" {{on "click" this.handleShowSlider}}>
  {{fa-icon "exclamation-triangle" class=(if this.isBtn (concat "btn btn-warning btn-" this.btnSize) "md-warning")}}
  {{ember-tooltip text="This record has errors! Click to view." side="right"
    tooltipClass="ember-tooltip md-tooltip warning"
  }}
</span>
{{/if}}

{{#unless this.hideSlider}}
  {{to-elsewhere
    named="md-slider-error"
    send=(hash
      title=(concat "Viewing errors for: " this.model.title)
      body=(component "control/md-errors"
        errors=this.model.schemaErrors
      )
    )
  }}
{{/unless}}
