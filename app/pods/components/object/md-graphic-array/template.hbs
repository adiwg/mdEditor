<Object::MdObjectTable @items={{model}} @header={{label}} @buttonText={{buttonText}} @templateClass={{templateClass}} @previewTemplate={{previewTemplate}} @profilePath={{profilePath}} @attributes={{attributes}} as |editing|>
    {{!-- Editing: {{editing.fileName}} --}}

    <Input::MdInput @value={{editing.fileName}} @label="Name" @placeholder="File Name" @required={{true}} @profilePath={{concat profilePath ".fileName"}} />

    <Input::MdInput @value={{editing.fileType}} @label="File Type" @placeholder="Enter the file format(s) of the logo." @profilePath={{concat profilePath ".fileType"}} />

    <Input::MdTextarea @maxlength={{500}} @value={{editing.fileDescription}} @label="Description" @placeholder="Description of the file: Less than 500 characters" @profilePath={{concat profilePath ".fileDescription"}} />

    <Object::MdOnlineResourceArray @shadow={{false}} @model={{editing.fileUri}} @ellipsis={{true}} @imagePicker={{true}} @profilePath={{concat profilePath ".onlineResource"}} />

</Object::MdObjectTable>
{{yield}}
