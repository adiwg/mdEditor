{{#object/md-object-table
  items=this.model
  header=this.label
  buttonText=this.buttonText
  templateClass=this.templateClass
  previewTemplate=this.previewTemplate
  profilePath=this.profilePath
  attributes=this.attributes as |editing|
}}
    {{!-- Editing: {{editing.fileName}} --}}

    {{input/md-input
      value=editing.fileName
      label="Name"
      placeholder="File Name"
      required=true
      profilePath=(concat this.profilePath ".fileName")
    }}

    {{input/md-input
      value=editing.fileType
      label="File Type"
      placeholder="Enter the file format(s) of the logo."
      profilePath=(concat this.profilePath ".fileType")
    }}

    {{input/md-textarea
      maxlength=500
      value=editing.fileDescription
      label="Description"
      placeholder="Description of the file: Less than 500 characters"
      profilePath=(concat this.profilePath ".fileDescription")
    }}

    {{object/md-online-resource-array
      shadow=false
      model=editing.fileUri
      ellipsis=true
      imagePicker=true
      profilePath=(concat this.profilePath ".onlineResource")
    }}

{{/object/md-object-table}}
{{yield}}
