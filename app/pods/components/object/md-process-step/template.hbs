{{input/md-input
  value=this.model.stepId
  model=null
  valuePath=null
  label='Step ID'
  data-spy='Step ID'
  placeholder='Enter an identifer for the step.'
  required=false
  profilePath=(concat this.profilePath '.stepId')
}}

{{input/md-textarea
  value=this.model.description
  required=true
  profilePath=(concat this.profilePath '.description')
  label='Description'
  placeholder='Description of the process or methodology step.'
  data-spy='Step Description'
  showValidations=true
}}

{{#object/md-array-table
  columns='Description'
  value=this.model.stepSource
  title='Step Source'
  templateClass=this.sourceTemplate
  profilePath=(concat this.profilePath '.stepSource')
  data-spy='Step Source'
  as |source|
}}
  <td>
    {{input/md-textarea
      value=source.item.description
      profilePath=(concat this.profilePath '.stepSource.description')
      placeholder='Information about the source data used in the process step.'
    }}
  </td>
{{/object/md-array-table}}

{{#object/md-array-table
  columns='Description'
  value=this.model.stepProduct
  title='Step Product'
  templateClass=this.sourceTemplate
  profilePath=(concat this.profilePath '.stepProduct')
  data-spy='Step Product'
  as |source|
}}
  <td>
    {{input/md-textarea
      value=source.item.description
      profilePath=(concat this.profilePath '.stepProduct.description')
      placeholder='Information about an intermediate data set that (1) is significant in the opinion of the data producer, (2) is generated in the processing step, and (3) is used in later processing steps.'
    }}
  </td>
{{/object/md-array-table}}

{{object/md-party-array
  title='Processors'
  data-spy='Processors'
  class=(if this.embedded 'md-embedded')
  collapsible=true
  collapsed=false
  required=false
  value=this.model.processor
  profilePath=(concat this.profilePath '.processor')
}}

{{object/md-citation-array
  model=this.model.reference
  profilePath=(concat this.profilePath '.stepReference')
  data-spy='Step Reference'
  editItem=this.editCitation
  label='Step Reference'
}}

{{object/md-time-period
  model=this.model.timePeriod
  profilePath=(concat this.profilePath '.timePeriod')
  data-spy='Time Period'
  label='Time Period'
}}

{{input/md-codelist
  value=this.model.scope.scopeCode
  label='Scope'
  create=true
  tooltip=true
  icon=true
  mdCodeName='scope'
  closeOnSelect=false
  placeholder='Select type of resource.'
  profilePath=(concat this.profilePath '.scope')
  data-spy='Scope'
}}
{{yield}}