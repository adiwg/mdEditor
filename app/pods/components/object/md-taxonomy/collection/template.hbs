{{!-- {{input/md-input
  label="Main Title"
  data-spy="Main Title"
  model=this
  valuePath="title"
  placeholder="Descriptive name for the collection taxonomic system."
  profilePath=(concat profilePath ".mainTitle")
  showValidations=true
}} --}}

<Object::MdObjectrouteTable
  @attributes='citation.title,modifications'
  @items={{this.model.taxonomicSystem}}
  @header='Taxonomic System'
  @shadow={{true}}
  @required={{true}}
  @buttonText='Add system'
  @ellipsis={{true}}
  @previewTemplateTable='object/md-taxonomy/collection/system/preview'
  @editItem={{this.editSystem}}
  @profilePath={{concat this.profilePath '.taxonomicSystem'}}
  @verticalButtons={{true}}
  @hideIndex={{false}}
  @condensed={{false}}
  @editOnAdd={{false}}
  @templateClass={{this.systemTemplate}}
  @scrollToId='md-system'
  @data-spy='System'
/>

<Layout::MdCard
  @title='Classification'
  @collapsible={{true}}
  @collapsed={{false}}
  @profilePath={{concat this.profilePath '.classification'}}
  @data-spy='Classification'
  @required={{true}}
  @shadow={{true}}
  @maximizable={{true}}
  @spotlightEnabled={{false}}
  @block={{if this.model.taxonomicClassification.length false true}}
>
  <Object::MdTaxonomy::Classification
    @model={{this.model.taxonomicClassification}}
    @profilePath={{concat this.profilePath '.classification'}}
  />
</Layout::MdCard>

<Object::MdPartyArray
  @title='Observer'
  @plain={{false}}
  @required={{false}}
  @value={{this.model.observer}}
  @profilePath={{concat this.profilePath '.observer'}}
  @data-spy='Observer'
/>

<Input::MdTextarea
  @value={{this.model.generalScope}}
  @required={{false}}
  @autoresize={{true}}
  @placeholder='Description of the range of taxa addressed in the data set or collection. For example, all vascular plants were identified to family or species.'
  @label='General Scope'
  @data-spy='General Scope'
  @embedded={{false}}
  @profilePath={{concat this.profilePath '.generalScope'}}
/>

<Input::MdTextarea
  @value={{this.identificationProcedure}}
  @required={{false}}
  @autoresize={{true}}
  @placeholder='Description of the methods used for taxonomic identification. Could include specimen processing, comparison with museum materials, keys, chemical or genetic analyses, etc.'
  @label='Identification Procedure'
  @data-spy='Procedure'
  @embedded={{false}}
  @profilePath={{concat this.profilePath '.identificationProcedure'}}
/>

<Input::MdTextarea
  @value={{this.model.identificationCompleteness}}
  @required={{false}}
  @autoresize={{true}}
  @placeholder='Information concerning the proportions and treatment of unidentified materials; estimates of the importance, and identities of misidentifications, uncertain determinations, synonyms or other incorrect usages; taxa not well treated or requiring further work; and expertise of field workers.'
  @label='Identification Completeness'
  @data-spy='Completeness'
  @embedded={{false}}
  @profilePath={{concat this.profilePath '.identificationCompleteness'}}
/>

<Object::MdObjectTable
  @items={{this.model.voucher}}
  @header='Voucher'
  @data-spy='Voucher'
  @profilePath={{concat this.profilePath '.voucher'}}
  @buttonText='Add Voucher'
  @ellipsis={{true}}
  @attributes='specimen'
  @collapsible={{true}}
  @templateClass={{this.voucherTemplate}}
  as |editing|
>
  <Object::MdTaxonomy::Collection::Voucher
    @model={{editing}}
    @profilePath={{concat this.profilePath '.voucher'}}
  />
</Object::MdObjectTable>