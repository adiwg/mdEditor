{{input/md-textarea
  value=model.description
  rows=5
  maxHeight=300
  placeholder='Description of vertical extent'
  label='Description'
  profilePath=(concat profilePath '.description')
}}
{{input/md-input
  type='number'
  step='1'
  model=this
  valuePath='model.minValue'
  label='Min Value'
  placeholder='0'
  profilePath=(concat profilePath '.minValue')
  showValidations=true
}}
{{input/md-input
  type='number'
  step='1'
  model=this
  valuePath='model.maxValue'
  label='Max Value'
  placeholder='0'
  profilePath=(concat profilePath '.maxValue')
  showValidations=true
}}
{{object/md-srs model=model.crsId profilePath=(concat profilePath '.crsId')}}