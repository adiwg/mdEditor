{{#layout/md-object-container
  title=this.title index=this.index deleteItem=this.deleteExtent profilePath=this.profilePath
}}

  {{input/md-textarea
    value=this.extent.description
    rows=3
    maxHeight=300
    placeholder='Description of extent'
    label='Extent Description'
    isCollapsible=true
    profilePath=(concat this.profilePath '.description')
  }}

  {{object/md-extent/spatial
    extent=this.extent
    index=this.index
    editFeatures=this.editFeatures
    profilePath=(concat this.profilePath '.geographic')
  }}

  {{#object/md-object-table
    items=this.extent.verticalExtent
    header='Vertical Extents'
    buttonText='Add Vertical Extent'
    ellipsis=true
    required=false
    profilePath=(concat this.profilePath '.vertical')
    attributes='description,minValue,maxValue'
    as |editing|
  }}
    {{object/md-extent/vertical
      model=editing
      profilePath=(concat this.profilePath '.vertical')
    }}
  {{/object/md-object-table}}

  {{#object/md-object-table
    items=this.extent.temporalExtent
    header='Temporal Extents'
    buttonText='Add Temporal Extent'
    ellipsis=true
    required=false
    profilePath=(concat this.profilePath '.temporal')
    attributes='description'
    as |editing|
  }}
    {{object/md-time-period
      model=editing
      profilePath=(concat this.profilePath '.temporal')
    }}
  {{/object/md-object-table}}

{{/layout/md-object-container}}
