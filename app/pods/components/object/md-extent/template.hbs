{{#layout/md-object-container
  title=title index=index deleteItem=deleteExtent profilePath=profilePath
}}

  {{input/md-textarea
    value=extent.description
    rows=3
    maxHeight=300
    placeholder='Description of extent'
    label='Extent Description'
    isCollapsible=true
    profilePath=(concat profilePath '.description')
  }}

  {{object/md-extent/spatial
    extent=extent
    index=index
    editFeatures=editFeatures
    profilePath=(concat profilePath '.geographic')
  }}

  {{#object/md-object-table
    items=extent.verticalExtent
    header='Vertical Extents'
    buttonText='Add Vertical Extent'
    ellipsis=true
    required=false
    profilePath=(concat profilePath '.verticalExtent')
    attributes='description,minValue,maxValue'
    as |editing|
  }}
    {{object/md-extent/vertical
      model=editing
      profilePath=(concat profilePath '.verticalExtent')
    }}
  {{/object/md-object-table}}

  {{#object/md-object-table
    items=extent.temporalExtent
    header='Temporal Extents'
    buttonText='Add Temporal Extent'
    ellipsis=true
    required=false
    profilePath=(concat profilePath '.temporalExtent')
    attributes='description'
    as |editing|
  }}
    {{object/md-time-period
      model=editing
      profilePath=(concat profilePath '.temporalExtent')
    }}
  {{/object/md-object-table}}

{{/layout/md-object-container}}