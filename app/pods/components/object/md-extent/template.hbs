<Layout::MdObjectContainer @title={{title}} @index={{index}} @deleteItem={{deleteExtent}} @profilePath={{profilePath}}>

  <Input::MdTextarea @value={{extent.description}} @rows={{3}} @maxHeight={{300}} @placeholder="Description of extent" @label="Extent Description" @isCollapsible={{true}} @profilePath={{concat profilePath ".description"}} />

  <Object::MdExtent::Spatial @extent={{extent}} @index={{index}} @editFeatures={{editFeatures}} @profilePath={{concat profilePath ".geographic"}} />

  <Object::MdObjectTable @items={{extent.verticalExtent}} @header="Vertical Extents" @buttonText="Add Vertical Extent" @ellipsis={{true}} @required={{false}} @profilePath={{concat profilePath ".vertical"}} @attributes="description,minValue,maxValue" as |editing|>
    <Object::MdExtent::Vertical @model={{editing}} @profilePath={{concat profilePath ".vertical"}} />
  </Object::MdObjectTable>

  <Object::MdObjectTable @items={{extent.temporalExtent}} @header="Temporal Extents" @buttonText="Add Temporal Extent" @ellipsis={{true}} @required={{false}} @profilePath={{concat profilePath ".temporal"}} @attributes="description" as |editing|>
    <Object::MdTimePeriod @model={{editing}} @profilePath={{concat profilePath ".temporal"}} />
  </Object::MdObjectTable>

</Layout::MdObjectContainer>