{{input/md-input
  label="Name"
  data-spy="Name"
  model=this
  valuePath="name"
  placeholder="Descriptive name for the domain value."
  profilePath=(concat profilePath ".name")
  showValidations=true
}}

{{input/md-input
  label="Value"
  data-spy="Value"
  model=this
  valuePath="value"
  placeholder="Value of the domain item."
  profilePath=(concat profilePath ".value")
  showValidations=true
}}

{{input/md-textarea
  label="Definition"
  data-spy="Definition"
  model=this
  valuePath="definition"
  placeholder="A brief definition for the domain item."
  profilePath=(concat profilePath ".definition")
  showValidations=true
}}

{{#let this.model.reference as |citation|}}
  <Layout::MdCard
    @title="Item Reference"
    @collapsible={{true}}
    @collapsed={{false}}
    @profilePath={{concat this.profilePath ".reference"}}
    data-spy="Item Reference"
    @shadow={{true}}
  >
    <Object::MdCitation
      @model={{citation}}
      @profilePath={{concat this.profilePath ".reference"}}
      @simpleIdentifier={{true}}
      @embedded={{true}}
    />
  </Layout::MdCard>
{{/let}}
