<Input::MdInput @label="Name" @data-spy="Name" @model={{this}} @valuePath="name" @placeholder="Descriptive name for the domain value." @profilePath={{concat this.profilePath ".name"}} @showValidations={{true}} />

<Input::MdInput @label="Value" @data-spy="Value" @model={{this}} @valuePath="value" @placeholder="Value of the domain item." @profilePath={{concat this.profilePath ".value"}} @showValidations={{true}} />

<Input::MdTextarea @label="Definition" @data-spy="Definition" @model={{this}} @valuePath="definition" @placeholder="A brief definition for the domain item." @profilePath={{concat this.profilePath ".definition"}} @showValidations={{true}} />

{{#with this.model.reference as |citation|}}
  <Layout::MdCard @title="Item Reference" @collapsible={{true}} @collapsed={{false}} @profilePath={{concat this.profilePath ".reference"}} @data-spy="Item Reference" @shadow={{true}}>
    <Object::MdCitation @model={{citation}} @profilePath={{concat this.profilePath ".reference"}} @simpleIdentifier={{true}} @embedded={{true}} />
  </Layout::MdCard>
{{/with}}
