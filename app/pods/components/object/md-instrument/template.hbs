{{#layout/md-card
  title='Instrument ID'
  collapsible=false
  profilePath=(concat profilePath '.instrumentId')
  data-spy='Instrument ID'
  shadow=true
  required=true
}}
  {{input/md-input
    value=model.instrumentId
    model=null
    valuePath=null
    placeholder='Enter unique identifer for the instrument.'
    required=true
    profilePath=(concat profilePath '.instrumentId')
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Instrument Citation'
  collapsible=true
  profilePath=(concat profilePath '.citation')
  data-spy='Instrument Citation'
  shadow=true
  content=model.citation
  collapsed=true
}}
  {{object/md-citation
    model=model.citation
    profilePath=(concat profilePath '.citation')
    data-spy=false
    simpleIdentifier=true
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Instrument Identifier'
  collapsible=true
  profilePath=(concat profilePath '.identifier')
  data-spy='Instrument Identifier'
  shadow=true
  required=true
}}
  {{object/md-identifier
    model=model.identifier
    profilePath=(concat profilePath '.identifier')
    collapsible=true
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Instrument Type'
  collapsible=false
  profilePath=(concat profilePath '.instrumentType')
  data-spy='Instrument Type'
  shadow=true
  required=false
}}
  {{input/md-input
    value=model.instrumentType
    required=true
    autoresize=true
    placeholder='instrument type'
    profilePath=(concat profilePath '.instrumentType')
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Instrument Description'
  collapsible=false
  profilePath=(concat profilePath '.description')
  data-spy='Instrument Description'
  shadow=true
  required=false
}}
  {{input/md-textarea
    value=model.description
    required=true
    autoresize=true
    placeholder='A brief description of the instrument.'
    profilePath=(concat profilePath '.description')
  }}
{{/layout/md-card}}