{{#unless this.readOnly}}
  <table class="table table-striped table-hover fadeIn">
    <thead>
      <tr>
        <th>Keyword</th>
        <th>Id (Optional)</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each this.model.keyword as |keyword|}}
        <tr>
          <td>
            <Input::MdInput @value={{keyword.keyword}} @placeholder="Keyword" @profilePath={{concat this.profilePath ".keyword.keyword"}} />
          </td>
          <td>
            <Input::MdInput @value={{keyword.identifier}} @placeholder="Unique identifier" @profilePath={{concat this.profilePath ".keyword.identifier"}} />
          </td>
          <td>
            <div class="md-button-column">
              <button class="btn btn-xs btn-danger" {{action "deleteKeyword" this.model.keyword keyword}}>
                <FaIcon @icon="x" /> Delete
              </button>
            </div>
          </td>
        </tr>
{{else}}
  <tr>
    <td colspan="3">
      Add some keywords.
    </td>
  </tr>
      {{/each}}
      <tr>
        <td colspan="3">
          <button type="button" class="btn btn-xs btn-success" {{action "addKeyword" this.model.keyword}}>
            <FaIcon @icon="plus" /> Add Keyword
          </button>
          <button type="button" class="btn btn-xs btn-info" {{action "hideThesaurus" this.element}}>
            <FaIcon @icon="eye" /> Toggle Thesaurus
          </button>
        </td>
      </tr>
    </tbody>
  </table>
{{else}}

  <ul class="list-group">
    {{#each this.model.keyword as |keyword|}}
      <li class="list-group-item">
        <button class="btn btn-xs btn-danger pull-right" {{action "deleteKeyword" this.model.keyword keyword}}>
          <FaIcon @icon="x" /> Delete
        </button>
        {{keyword.keyword}}
      </li>
{{else}}
    <li class="list-group-item">Add some keywords.</li>
    {{/each}}
    {{#if this.editThesaurus}}
    <li class="list-group-item">
      <button type="button" class="btn btn-block btn-success" {{action this.editThesaurus this.listId}}>
        <FaIcon @icon="pencil" /> Edit keywords.
      </button>
    </li>
    {{/if}}
  </ul>
{{/unless}}
{{yield}}
