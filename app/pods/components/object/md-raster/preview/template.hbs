<form class="form-horizontal">
  <div class="form-group">
    <label class="col-lg-3">Raster Name</label>
    {{input/md-input
      class="col-lg-9"
      placeholder="The name(title) of the raster."
      profilePath=(concat this.profilePath ".coverageName")
      showValidations=true
      value=this.item.coverageName
      readonly=true
    }}
  </div>
  <div class="form-group">
    <label class="col-lg-3">Raster Description</label>
    {{input/md-textarea
      class="col-lg-9"
      placeholder="A description of the raster."
      profilePath=(concat this.profilePath ".coverageDescription")
      showValidations=true
      value=this.item.coverageDescription
      readonly=true
    }}
  </div>
</form>
