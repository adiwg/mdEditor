{{#layout/md-card}}
  {{input/md-input
    label='Name'
    data-spy='Name'
    value=this.model.coverageName
    placeholder='The name(title) of the raster.'
    profilePath=(concat this.profilePath '.coverageName')
    showValidations=true
  }}
  {{input/md-textarea
    label='Description'
    data-spy='Description'
    value=this.model.coverageDescription
    placeholder='A description of the raster'
    profilePath=(concat this.profilePath '.coverageDescription')
    showValidations=true
  }}
{{/layout/md-card}}

{{object/md-raster/attrgroup
  hideIndex=true
  value=this.model.attributeGroup
  title='Attribute Groups'
  editAttribute=this.editAttribute
  deleteAttrGroup=this.deleteAttrGroup
  data-spy=false
  addAttrGroup=this.addAttrGroup
  collapsible=true
  collapsed=false
  profilePath=(concat this.profilePath '.attributeGroup')
}}

{{#layout/md-card
  collapsible=true
  title='Processing Level Code'
  collapsed=false
  shadow=true
  profilePath=(concat this.profilePath '.processingLevelCode')
}}
  {{object/md-identifier
    model=this.model.processingLevelCode
    profilePath=(concat this.profilePath '.processingLevelCode')
    collapsed=true
    collapsible=true
    data-spy=false
  }}
{{/layout/md-card}}

{{#layout/md-card
  collapsible=true
  title='Image Description'
  collapsed=false
  shadow=true
  profilePath=(concat this.profilePath '.imageDescription')
}}
  {{object/md-raster/image-desc
    model=this.model.imageDescription
    profilePath=(concat this.profilePath '.imageDescription')
    data-spy=false
    collapsed=true
    collapsible=true
  }}
{{/layout/md-card}}