{{#unless this.showAlert}}
  <div class='panel panel-default {{if this.shadow "box-shadow--4dp"}}'>
    <div class='panel-heading'>
      <h3 class='panel-title md-panel-chevron'>
        <a
          data-toggle='collapse'
          aria-expanded={{if this.collapsed 'false' 'true'}}
          class={{if this.collapsed 'collapsed'}}
          href='{{this.panelId}}'
          aria-controls='{{this.panelId}}'
        >
          <span class='fa'></span>
          {{unless this.pluralTitle (pluralize this.title) this.pluralTitle}}
          <div class='label label-pill {{this.pillColor}}'>
            {{this.value.length}}
          </div>
        </a>
        <button
          type='button'
          id='{{this.panelId}}-btn'
          class='btn btn-xs btn-info pull-right'
          {{action 'addItem'}}
        >
          {{fa-icon 'plus'}}
          Add
        </button>
      </h3>
    </div>

    <div
      id={{this.panelId}}
      class='panel-collapse {{if this.collapsed "collapse" "in"}}'
    >
      <div class='panel-body {{if this.responsive "table-responsive"}}'>
        {{! template-lint-disable table-groups }}
        <table
          class='table table-striped table-hover fadeIn md-table-align-middle'
        >
          {{#if this.columnArray}}
            <thead>
              <tr>
                {{#unless this.hideIndex}}
                  <th>#</th>
                {{/unless}}
                {{#each this.columnArray as |prop|}}
                  <th>{{uc-words prop}}</th>
                {{/each}}
                <th></th>
              </tr>
            </thead>
          {{/if}}
          <tbody>
            {{#each this.arrayValues as |item index|}}
              <tr>
                {{#unless this.hideIndex}}
                  <td>{{index}}</td>
                {{/unless}}
                {{#layout/md-object-container
                  title='Attribute Group'
                  index=index
                  profilePath=(concat this.profilePath '.attributeGroup')
                  deleteItem=this.deleteAttrGroup
                }}
                  {{input/md-codelist-multi
                    value=item.attributeContentType
                    showValidations=true
                    required=true
                    create=true
                    tooltip=true
                    icon=false
                    data-spy=false
                    mdCodeName='coverageContentType'
                    closeOnSelect=false
                    placeholder='Specific type of information represented in the cell'
                    label='Attribute Content Type'
                    profilePath=(concat
                      this.profilePath '.atttributeContentType'
                    )
                  }}
                  {{object/md-objectroute-table
                    attributes='attributeDescription'
                    items=item.attribute
                    header='Attribute'
                    shadow=false
                    buttonText='Add Attribute'
                    ellipsis=false
                    previewTemplateTable='object/md-raster/attrgroup/attribute/preview'
                    editItem=this.editAttribute
                    profilePath=(concat this.profilePath '.attribute')
                    verticalButtons=true
                    hideIndex=false
                    condensed=false
                    editOnAdd=true
                    data-spy=false
                    routeParams=index
                    scrollToId=(concat 'md-raster-attrgroup-attribute-' index)
                  }}
                {{/layout/md-object-container}}
              </tr>
            {{else}}
              <tr>
                <td
                  colspan={{add-em
                    (if this.hideIndex 1 2)
                    this.columnArray.length
                  }}
                >
                  <button
                    type='button'
                    id='{{this.panelId}}-btn'
                    class='btn btn-xs btn-info'
                    {{action 'addItem'}}
                  >
                    {{fa-icon 'plus'}}
                    Add
                    {{this.title}}
                  </button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{{else}}
  {{control/md-alert-table
    title=this.title
    required=this.required
    addItem=(action 'addItem')
    target=this.arrayValues
    tipMessage=this.alertTipMessage
  }}
{{/unless}}