
{{#layout/md-card title="Domain Information" collapsible=true collapsed=false
  profilePath=(concat this.profilePath ".information") data-spy="Domain Information"
  required=true
}}
  {{input/md-input
    model=this
    valuePath="domainId"
    placeholder="Enter the identifier for the domain."
    label="Domain Identifier"
    profilePath=(concat this.profilePath ".information.identifier")
    data-spy="Identifier"
    class="md-embedded"
  }}

  {{input/md-input
    model=this
    valuePath="codeName"
    placeholder="Enter the name used to refer to the domain in schema definitions."
    label="Code Name"
    data-spy="Code Name"
    profilePath=(concat this.profilePath ".information.codeName")
    class="md-embedded"
  }}

  {{input/md-input
    value=this.model.commonName
    placeholder="Enter a short common name for the domain."
    label="Common Name"
    profilePath=(concat this.profilePath ".information.commonName")
    data-spy="Common Name"
    class="md-embedded"
  }}

  {{input/md-textarea
    value=this.model.description
    required=true
    autoresize=true
    placeholder="A brief description of the domain."
    label="Description"
    data-spy="Description"
    embedded=true
    profilePath=(concat this.profilePath ".information.description")
  }}

{{/layout/md-card}}

{{object/md-objectroute-table
  attributes="Domain Item Name,Value,Definition"
  items=this.model.domainItem
  header="Domain Items"
  shadow=true
  buttonText="Add Item"
  ellipsis=fallse
  previewTemplateTable="object/md-domainitem/preview"
  editItem=(action "editDomainItem")
  verticalButtons=false
  profilePath=this.profilePath
  hideIndex=false
  condensed=false
  editOnAdd=false
  scrollToId="md-domainitem"
  data-spy="Domain Items"
}}

{{object/md-citation/preview
  title="Domain Reference"
  profilePath=(concat this.profilePath ".domainReference")
  citation=this.model.domainReference
  muted=true
  required=false
  editCitation=(action "editCitation")
}}
