{{input/md-input
  value=model.platformId
  model=null
  valuePath=null
  label='Platform ID'
  data-spy='Platform ID'
  placeholder='Enter unique identifer for the platform.'
  required=false
  profilePath=(concat profilePath '.platformId')
}}

{{#layout/md-card
  title='Platform Citation'
  collapsible=true
  profilePath=(concat profilePath '.citation')
  data-spy='Platform Citation'
  shadow=true
  content=model.citation
}}
  {{object/md-citation
    model=model.citation
    profilePath=(concat profilePath '.citation')
    data-spy=false
    simpleIdentifier=true
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Platform Identifier'
  collapsible=true
  profilePath=(concat profilePath '.identifier')
  data-spy='Platform Identifier'
  shadow=true
  content=model.identifier
}}
  {{object/md-identifier
    model=model.identifier
    profilePath=(concat profilePath '.identifier')
    data-spy=false
  }}
{{/layout/md-card}}

{{input/md-textarea
  value=model.description
  required=true
  profilePath=(concat profilePath '.description')
  label='Description'
  placeholder='Description of the platform.'
  data-spy='Platform Description'
  showValidations=true
}}