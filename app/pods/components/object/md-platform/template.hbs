{{#layout/md-card
  title='Platform ID'
  collapsible=false
  profilePath=(concat profilePath '.platformId')
  data-spy='Platform ID'
  shadow=true
  required=true
}}
  {{input/md-input
    value=model.platformId
    model=null
    valuePath=null
    placeholder='Enter unique identifer for the platform.'
    required=true
    profilePath=(concat profilePath '.platformId')
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Platform Citation'
  collapsible=true
  profilePath=(concat profilePath '.citation')
  data-spy='Platform Citation'
  shadow=true
  content=model.citation
  collapsed=true
}}
  {{object/md-citation
    model=model.citation
    profilePath=(concat profilePath '.citation')
    data-spy=false
    simpleIdentifier=true
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Platform Identifier'
  collapsible=true
  profilePath=(concat profilePath '.identifier')
  data-spy='Platform Identifier'
  shadow=true
  required=true
}}
  {{object/md-identifier
    model=model.identifier
    profilePath=(concat profilePath '.identifier')
    collapsible=true
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Platform Description'
  collapsible=false
  profilePath=(concat profilePath '.description')
  data-spy='Platform Description'
  shadow=true
  required=true
}}
  {{input/md-textarea
    value=model.description
    required=true
    autoresize=true
    placeholder='A brief description of the platform.'
    profilePath=(concat profilePath '.description')
    data-spy='Description'
  }}
{{/layout/md-card}}
