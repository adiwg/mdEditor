{{#object/md-array-table
     columns="Role,Contacts"
     title=title
     pluralTitle=pluralTitle
     required=required
     plain=plain
     value=value
     validation=validation
     errorMessage=errorMessage
     tipPath=tipPath
     tipModel=tipModel
     data-spy=false
     profilePath=profilePath
     templateClass=templateClass as |party|
   }}
   {{#let party.item as |item|}}
     <td>
       <Input::MdCodelist
         @path="role"
         @model={{item}}
         @create={{true}}
         @tooltip={{true}}
         @icon={{false}}
         @disabled={{this.disabled}}
         @mdCodeName="role"
         @showValidations={{true}}
         @placeholder="Select or enter a role"
         @profilePath={{concat this.profilePath ".role"}}
       />
     </td>
     <td>
       <Input::MdSelectContacts
           @placeholder="Select one or more contacts"
           @model={{item}}
           @path="_contacts"
           @icon={{true}}
           @tooltip={{true}}
           @showValidations={{true}}
           @profilePath={{concat this.profilePath ".contacts"}}
         />
     </td>
    {{/let}}{{/object/md-array-table}}
