{{#layout/md-card
  title="Time Period"
  collapsible=true
  collapsed=this.collapsed
  data-spy="Time Period"
  required=this.required
  shadow=true
  content=this.model
}}

  {{#layout/md-card shadow=false
    profilePath=(concat this.profilePath ".dateRange")
    muted=false
    plain=true
  }}
    {{input/md-date-range
      startDateTime=this.startDateTime
      endDateTime=this.endDateTime
      profilePath=(concat this.profilePath ".dateRange")
    }}
  {{/layout/md-card}}

  {{input/md-input
   value=this.identifier
   label="Identifier"
   placeholder="Enter a unique identifier for the time period."
   required=false
   profilePath=(concat this.profilePath ".identifier")
 }}

  {{input/md-textarea
      value=this.model.description
      profilePath=(concat this.profilePath ".description")
      label="Description"
      placeholder="A brief description providing relevant information about the time period."
  }}

  {{#layout/md-card shadow=false
    profilePath=(concat this.profilePath ".periodName")
    muted=false
    plain=true
  }}

    {{#object/md-simple-array-table title="Time Period Name"
      data-spy=false
      plain=true
      value=this.model.periodName as |val|
    }}
      <td>
        {{input/md-input value=val.item.value
         placeholder="Enter Name"}}
      </td>
    {{/object/md-simple-array-table}}
  {{/layout/md-card}}

  {{#layout/md-card
    shadow=false
    profilePath=(concat this.profilePath ".interval")
    muted=false
    plain=true
  }}
    <div class="form-inline">
      <label class="text-info">Interval</label>
      {{input/md-input
        type="number"
        model=this
        valuePath="intervalAmount"
        step="0.01"
        label="Interval Amount"
        placeholder="Enter amount of time for the interval."
        profilePath=(concat this.profilePath ".interval.intervalAmount")
        showValidations=true
      }}
      {{input/md-select
        create=false
        objectArray=this.timeUnit
        valuePath="value"
        namePath="name"
        label="Time Unit"
        required=true
        tooltip=false
        icon=false
        allowClear=true
        value=this.model.timeInterval.units
        profilePath=(concat this.profilePath ".interval.units")
        placeholder="Choose unit of time"
      }}
    </div>
  {{/layout/md-card}}

  {{#layout/md-card
    shadow=false
    profilePath=(concat this.profilePath ".duration")
    muted=false
    plain=true
    bodyIsRow=true
  }}
    <label class="text-info col-sm-2">Duration</label>
    <div class="col-sm-10">
      <div class="row">
        {{#each this.durationUnit as |unit|}}
          {{input/md-input
            class="col-sm-6 col-md-4 col-lg-2"
            valuePath=(concat "duration." unit)
            model=this.model
            type="number"
            label=(uc-words unit)
            placeholder=(concat "Enter " unit)
            profilePath=(concat this.profilePath ".duration." unit)
          }}
        {{/each}}
      </div>
    </div>
  {{/layout/md-card}}
  {{yield}}
{{/layout/md-card}}
