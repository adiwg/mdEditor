<Layout::MdCard @title="Time Period" @collapsible={{true}} @collapsed={{this.collapsed}} @data-spy="Time Period" @required={{this.required}} @shadow={{true}} @content={{this.model}}>

  <Layout::MdCard @shadow={{false}} @profilePath={{concat this.profilePath ".dateRange"}} @muted={{false}} @plain={{true}}>
    <Input::MdDateRange @startDateTime={{this.startDateTime}} @endDateTime={{this.endDateTime}} @profilePath={{concat this.profilePath ".dateRange"}} />
  </Layout::MdCard>

  <Input::MdInput @value={{this.identifier}} @label="Identifier" @placeholder="Enter a unique identifier for the time period." @required={{false}} @profilePath={{concat this.profilePath ".identifier"}} />

  <Input::MdTextarea @value={{this.model.description}} @profilePath={{concat this.profilePath ".description"}} @label="Description" @placeholder="A brief description providing relevant information about the time period." />

  <Layout::MdCard @shadow={{false}} @profilePath={{concat this.profilePath ".periodName"}} @muted={{false}} @plain={{true}}>

    <Object::MdSimpleArrayTable @title="Time Period Name" @data-spy={{false}} @plain={{true}} @value={{this.model.periodName}} as |val|>
      <td>
        <Input::MdInput @value={{val.item.value}} @placeholder="Enter Name" />
      </td>
    </Object::MdSimpleArrayTable>
  </Layout::MdCard>

  <Layout::MdCard @shadow={{false}} @profilePath={{concat this.profilePath ".interval"}} @muted={{false}} @plain={{true}}>
    <div class="form-inline">
      <label class="text-info">Interval</label>
      <Input::MdInput @type="number" @model={{this}} @valuePath="intervalAmount" @step="0.01" @label="Interval Amount" @placeholder="Enter amount of time for the interval." @profilePath={{concat this.profilePath ".interval.intervalAmount"}} @showValidations={{true}} />
      <Input::MdSelect @create={{false}} @objectArray={{this.timeUnit}} @valuePath="value" @namePath="name" @label="Time Unit" @required={{true}} @tooltip={{false}} @icon={{false}} @allowClear={{true}} @value={{this.model.timeInterval.units}} @profilePath={{concat this.profilePath ".interval.units"}} @placeholder="Choose unit of time" />
    </div>
  </Layout::MdCard>

  <Layout::MdCard @shadow={{false}} @profilePath={{concat this.profilePath ".duration"}} @muted={{false}} @plain={{true}} @bodyIsRow={{true}}>
    <label class="text-info col-sm-2">Duration</label>
    <div class="col-sm-10">
      <div class="row">
        {{#each this.durationUnit as |unit|}}
          <Input::MdInput @class="col-sm-6 col-md-4 col-lg-2" @valuePath={{concat "duration." unit}} @model={{this.model}} @type="number" @label={{uc-words unit}} @placeholder={{concat "Enter " unit}} @profilePath={{concat this.profilePath ".duration." unit}} />
        {{/each}}
      </div>
    </div>
  </Layout::MdCard>
  {{yield}}
</Layout::MdCard>
