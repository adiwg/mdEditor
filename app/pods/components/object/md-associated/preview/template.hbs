{{#with item as |model|}}
  <dl class="dl-horizontal">
    <dt>
      <h4 class="text-info">Resource #{{index}}</h4>
    </dt>
    <dd></dd>
    <div class="row">
      <div class="col-xxl-6">
        <Control::MdDefinition @title="Association Type" @profilePath={{concat profilePath ".associationType"}}>
          {{model.associationType}}
          {{#if model.mdRecordId}}
            (<em>linked</em>)
          {{/if}}
        </Control::MdDefinition>
      </div>
      <div class="col-xxl-6">
        <Control::MdDefinition @title="Initiative Type" @text={{model.initiativeType}} @profilePath={{concat profilePath ".initiativeType"}} />
      </div>
    </div>
  </dl>

  <Object::MdCitation::Preview::Body @citation={{citation}} @profilePath={{concat profilePath ".resourceCitation"}} />

  <dl class="dl-horizontal col-lg-12">
  <Control::MdDefinition @title="Metadata Identifier">
    {{#with metadataIdentifier as |meta|}}
      {{meta.identifier}} {{if meta.namespace (concat "(" meta.namespace ")")}}
    {{else}}
      <em class="text-muted">No metadata identifier assigned.</em>
    {{/with}}
  </Control::MdDefinition>
</dl>
{{/with}}
