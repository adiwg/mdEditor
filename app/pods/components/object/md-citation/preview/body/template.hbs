<div class='row'>
  <dl class='dl-horizontal col-lg-12'>
    {{control/md-definition
      title='Title'
      text=this.citation.title
      profilePath=(concat this.profilePath '.basicInformation.title')
    }}
  </dl>
  <dl class='dl-horizontal col-lg-12'>
    {{#control/md-definition
      title='Alternate Titles'
      profilePath=(concat this.profilePath '.basicInformation.alternateTitle')
    }}
      {{#each this.citation.alternateTitle as |title|}}
        {{title}}
        <br />
      {{else}}
        <em class='text-muted'>No alternate titles assigned.</em>
      {{/each}}
    {{/control/md-definition}}
  </dl>
  <div class='clearfix'></div>
  <dl class='dl-horizontal col-lg-12'>
    {{#control/md-definition
      title='Dates' profilePath=(concat this.profilePath '.basicInformation.dates')
    }}
      {{#each this.citation.date as |date|}}
        {{moment-format date.date 'YYYY-MM-DD'}}
        ({{date.dateType}})
        <br />
      {{else}}
        <em class='text-muted'>No dates assigned.</em>
      {{/each}}
    {{/control/md-definition}}
  </dl>
  <dl class='dl-horizontal col-lg-12'>
    {{#control/md-definition
      title='Identifier' profilePath=(concat this.profilePath '.identifier')
    }}
      {{#each this.citation.identifier as |id|}}
        {{id.identifier}}
        {{if id.namespace (concat '(' id.namespace ')')}}
        <br />
      {{else}}
        <em class='text-muted'>No identifiers assigned.</em>
      {{/each}}
    {{/control/md-definition}}
  </dl>
  <div class='clearfix'></div>
  <dl class='dl-horizontal col-lg-12'>
    {{#control/md-definition
      title='Responsible Party'
      profilePath=(concat this.profilePath '.responsibleParty')
    }}
      {{#each this.citation.responsibleParty as |party|}}
        {{html-safe (if party.role party.role '<em>No Roles assigned.</em>')}}
        (
        {{#each party.party as |contact index|}}
          {{if index ', '}}
          {{control/md-contact-link contactId=contact.contactId}}
        {{else}}
          <em class='text-muted'>No Contacts assigned.</em>
        {{/each}}
        )
        <br />
      {{else}}
        <em class='text-muted'>No responsibility assigned.</em>
      {{/each}}
    {{/control/md-definition}}
  </dl>
  {{yield}}
</div>
