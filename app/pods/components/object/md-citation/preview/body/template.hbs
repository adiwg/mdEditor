<div class='row'>
  <dl class='dl-horizontal col-lg-12'>
    <Control::MdDefinition @title="Title" @text={{citation.title}} @profilePath={{concat profilePath ".basicInformation.title"}} />
  </dl>
  <dl class='dl-horizontal col-lg-12'>
    <Control::MdDefinition @title="Alternate Titles" @profilePath={{concat profilePath ".basicInformation.alternateTitle"}}>
      {{#each citation.alternateTitle as |title|}}
        {{title}}
        <br />
      {{else}}
        <em class='text-muted'>No alternate titles assigned.</em>
      {{/each}}
    </Control::MdDefinition>
  </dl>
  <div class='clearfix'></div>
  <dl class='dl-horizontal col-lg-12'>
    <Control::MdDefinition @title="Dates" @profilePath={{concat profilePath ".basicInformation.dates"}}>
      {{#each citation.date as |date|}}
        {{moment-format date.date 'YYYY-MM-DD'}}
        ({{date.dateType}})
        <br />
      {{else}}
        <em class='text-muted'>No dates assigned.</em>
      {{/each}}
    </Control::MdDefinition>
  </dl>
  <dl class='dl-horizontal col-lg-12'>
    <Control::MdDefinition @title="Identifier" @profilePath={{concat profilePath ".identifier"}}>
      {{#each citation.identifier as |id|}}
        {{id.identifier}}
        {{if id.namespace (concat '(' id.namespace ')')}}
        <br />
      {{else}}
        <em class='text-muted'>No identifiers assigned.</em>
      {{/each}}
    </Control::MdDefinition>
  </dl>
  <div class='clearfix'></div>
  <dl class='dl-horizontal col-lg-12'>
    <Control::MdDefinition @title="Responsible Party" @profilePath={{concat profilePath ".responsibleParty"}}>
      {{#each citation.responsibleParty as |party|}}
        {{html-safe (if party.role party.role '<em>No Roles assigned.</em>')}}
        (
        {{#each party.party as |contact index|}}
          {{if index ', '}}
          <Control::MdContactLink @contactId={{contact.contactId}} />
        {{else}}
          <em class='text-muted'>No Contacts assigned.</em>
        {{/each}}
        )
        <br />
      {{else}}
        <em class='text-muted'>No responsibility assigned.</em>
      {{/each}}
    </Control::MdDefinition>
  </dl>
  {{yield}}
</div>