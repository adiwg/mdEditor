<Layout::MdCard @title={{title}} @collapsible={{true}} @collapsed={{false}} @profilePath={{profilePath}} @required={{required}} @muted={{muted}} @spotlightEnabled={{spotlightEnabled}} @btnText="Edit" @btnClass="success" @btnAction={{action editCitation (dasherize title)}} @btnIcon="pencil">

<Object::MdCitation::Preview::Body @citation={{citation}} @profilePath={{profilePath}} />

{{yield}}
<div class="card-footer">
  <button type="button" name="button" class="btn btn-success pull-right"
    {{action (action editCitation (dasherize title))}}>
    {{fa-icon "pencil"}} Edit Citation
  </button>
</div>
</Layout::MdCard>
