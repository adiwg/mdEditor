{{input/md-textarea
  value=this.model.statement
  profilePath=(concat this.profilePath '.statement')
  label='Statement'
  placeholder='A general statement of the actions taken to verify, transform, repair, and integrate the resource.'
  data-spy='Statement'
  required=true
  autoresize=true
  maxrows=25
}}

{{object/md-objectroute-table
  attributes='description'
  items=this.model.processStep
  header='Process Step'
  buttonText='Add Step'
  ellipsis=false
  previewTemplateTable='object/md-process-step/preview'
  templateClass=this.stepTemplateClass
  editItem=this.editProcessStep
  profilePath=(concat this.profilePath '.processStep')
  verticalButtons=true
  hideIndex=false
  condensed=false
  editOnAdd=false
  scrollToId='md-process-step'
  data-spy='Process Step'
}}

{{object/md-objectroute-table
  attributes='description'
  items=this.model.source
  header='Source'
  shadow=true
  buttonText='Add Source'
  ellipsis=false
  previewTemplateTable='object/md-source/preview'
  editItem=this.editSource
  profilePath=(concat this.profilePath '.source')
  verticalButtons=true
  hideIndex=false
  condensed=false
  editOnAdd=false
  scrollToId='md-source'
  data-spy='Source'
}}

{{object/md-citation-array
  model=this.model.citation
  profilePath=(concat this.profilePath '.citation')
  data-spy='Lineage Citation'
  editItem=this.editCitation
  label='Citation'
}}

{{input/md-codelist
  value=this.model.scope.scopeCode
  label='Scope'
  create=true
  tooltip=true
  icon=true
  mdCodeName='scope'
  closeOnSelect=false
  placeholder='Select type of resource.'
  profilePath=(concat this.profilePath '.scope')
  data-spy='Scope'
}}
{{yield}}