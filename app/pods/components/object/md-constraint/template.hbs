{{input/md-select
  label='Constraint Type'
  showValidations=true
  model=this
  path='type'
  valuePath='value'
  namePath='name'
  objectArray=this.typeOptions
  tooltip=true
  tooltipPath='tip'
  searchEnabled=false
  placeholder='The type of constraint.'
  profilePath=(concat this.profilePath '.type')
}}

{{#object/md-simple-array-table
  title='Use Limitations'
  data-spy=false
  plain=false
  required=this.useRequired
  profilePath=(concat this.profilePath '.useLimitation')
  value=this.model.useLimitation
  as |val|
}}
  <td>
    {{input/md-textarea
      value=val.item.value
      placeholder='Describe Limitation affecting the fitness for use of the resource or metadata. For example, "not to be used for navigation".'
    }}
  </td>
{{/object/md-simple-array-table}}

{{#layout/md-card
  title='Legal'
  collapsible=true
  collapsed=true
  required=this.legalRequired
  profilePath=(concat this.profilePath '.legal')
  data-spy=false
  shadow=true
}}

  {{input/md-codelist-multi
    value=this.model.legal.accessConstraint
    label='Access Constraints'
    create=false
    tooltip=true
    icon=false
    mdCodeName='restriction'
    closeOnSelect=false
    profilePath=(concat this.profilePath '.legal.accessConstraint')
    placeholder='Access constraints applied to assure the protection of privacy or intellectual property, and any special restrictions or limitations on obtaining the resource.'
  }}

  {{input/md-codelist-multi
    value=this.model.legal.useConstraint
    label='Use Constraints'
    create=false
    tooltip=true
    icon=false
    mdCodeName='restriction'
    closeOnSelect=false
    profilePath=(concat this.profilePath '.legal.useConstraint')
    placeholder='Constraints applied to assure the protection of privacy or intellectual property, and any special restrictions or limitations or warnings on using the resource.'
  }}

  {{#layout/md-card shadow=false}}
    {{#object/md-simple-array-table
      title='Other Constraint'
      data-spy=false
      plain=true
      profilePath=(concat this.profilePath '.legal.otherConstraint')
      value=this.model.legal.otherConstraint
      as |val|
    }}
      <td>
        {{input/md-textarea
          value=val.item.value
          rows=3
          placeholder='Other restrictions and legal prerequisites for accessing and using the resource.'
        }}
      </td>
    {{/object/md-simple-array-table}}
  {{/layout/md-card}}

{{/layout/md-card}}

{{#layout/md-card
  title='Security'
  collapsible=true
  collapsed=true
  required=this.securityRequired
  profilePath=(concat this.profilePath '.security')
  data-spy=false
  shadow=true
}}
  {{input/md-codelist
    label='Classification'
    mdCodeName='classification'
    showValidations=true
    model=this
    path='classification'
    placeholder='Name of the handling restrictions on the resource or metadata.'
    profilePath=(concat this.profilePath '.security.classification')
  }}
  {{input/md-input
    value=this.model.security.classificationSystem
    label='Classification System Name'
    placeholder='Enter name of the classification system.'
    profilePath=(concat this.profilePath '.security.classificationSystem')
  }}
  {{input/md-textarea
    value=this.model.security.userNote
    placeholder='Explanation of the application of the legal constraints or other restrictions and legal prerequisites for obtaining and using the resource.'
    label='Note'
    profilePath=(concat this.profilePath '.security.note')
  }}
  {{input/md-textarea
    value=this.model.security.handlingDescription
    placeholder='Enter additional information about the restrictions on handling the resource.'
    label='Handling Description'
    profilePath=(concat this.profilePath '.security.handlingDescription')
  }}
{{/layout/md-card}}

{{#layout/md-card
  title='Releasability'
  collapsible=true
  collapsed=true
  required=false
  profilePath=(concat this.profilePath '.releasability')
}}
  {{object/md-party-array
    title='Addressee'
    value=this.model.releasability.addressee
    profilePath=(concat this.profilePath '.releasability.addressee')
  }}
  {{input/md-input
    value=this.model.releasability.statement
    label='Statement'
    placeholder='Statement of the conditions under which the resource may be released.'
    profilePath=(concat this.profilePath '.releasability.statement')
  }}
  {{#object/md-simple-array-table
    data-spy=false
    title='Dissemintation Constraint'
    plain=true
    value=this.model.releasability.disseminationConstraint
    profilePath=(concat this.profilePath '.releasability.disseminationConstraint')
    as |const|
  }}
    <td>
      {{input/md-codelist
        model=const.item
        create=false
        mdCodeName='restriction'
        profilePath=(concat
          this.profilePath '.releasability.disseminationConstraint'
        )
        placeholder='Restrictions on the release of the resource.'
        path='value'
      }}
    </td>
  {{/object/md-simple-array-table}}
{{/layout/md-card}}

{{object/md-party-array
  title='Responsible Party'
  value=this.model.responsibleParty
  profilePath=(concat this.profilePath '.responsibleParty')
}}

{{object/md-graphic-array
  model=this.model.graphic
  button-text='Add Graphic'
  label='Graphic or Logo'
  profilePath=(concat this.profilePath '.graphic')
}}

{{#object/md-object-table
  items=this.model.reference
  header='References'
  previewTemplate=this.previewTemplate
  attributes='title'
  as |editing|
}}
  {{object/md-citation
    model=editing
    profilePath=(concat this.profilePath '.reference')
  }}
{{/object/md-object-table}}

{{yield}}
