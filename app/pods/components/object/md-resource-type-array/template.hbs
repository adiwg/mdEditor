{{#object/md-array-table
  columns='Type, Name'
  title='Resource Type'
  data-spy=false
  value=this.value
  validation=this.validation
  plain=this.plain
  required=this.required
  errorMessage=this.errorMessage
  tipPath=this.tipPath
  tipModel=this.tipModel
  profilePath=this.profilePath
  templateClass=this.templateClass
  as |type|
}}
  <td>
    {{#with type.item as |item|}}
      {{input/md-codelist
        create=true
        tooltip=true
        icon=true
        disabled=this.disabled
        allowClear=true
        mdCodeName='scope'
        showValidations=true
        profilePath=(concat this.profilePath '.resourceType')
        model=item
        path='type'
        placeholder='Choose type of resource'
      }}
    {{/with}}
  </td>
  <td>
    {{input/md-input
      value=type.item.name
      profilePath=(concat this.profilePath '.name')
      placeholder='Name of resource'
    }}
  </td>
{{/object/md-array-table}}