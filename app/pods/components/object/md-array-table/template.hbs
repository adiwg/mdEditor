{{#unless this.showAlert}}
  {{#if this.plain}}
    <label class='show'>
      <span class='fa'></span>
      {{unless this.pluralTitle (pluralize this.title) this.pluralTitle}}
      <div class='label label-pill {{this.pillColor}}'> {{this.value.length}} </div>
      <button
        type='button'
        id='{{this.panelId}}-btn'
        class='btn btn-xs btn-info pull-right'
        {{action 'addItem' this.value}}
      >
        {{fa-icon 'plus'}}
        Add
        {{this.title}}
      </button>
    </label>
    <div class={{if this.responsive 'table-responsive'}}>
      {{! template-lint-disable table-groups }}
      <table class='table table-striped table-hover md-table-align-middle'>
        {{#if this.columnArray}}
          <thead>
            <tr>
              {{#unless this.hideIndex}}
                <th>#</th>
              {{/unless}}
              {{#each this.columnArray as |prop|}}
                <th>{{uc-words prop}}</th>
              {{/each}}
              <th></th>
            </tr>
          </thead>
        {{/if}}
        <tbody>
          {{#each this.arrayValues as |item index|}}
            <tr>
              {{#unless this.hideIndex}}
                <td>{{index}}</td>
              {{/unless}}
              {{yield (hash item=item index=index profilePath=this.profilePath)}}
              <td>
                <div class='md-button-column'>
                  {{!-- <button type="button" class="btn btn-xs btn-danger" {{action "deleteItem" value index}}>
                                <span class="fa fa-times"></span> Delete
                            </button> --}}
                  {{#control/md-button-confirm
                    class='btn btn-xs btn-danger'
                    disabled=(if this.simple (if item.value null 'disabled'))
                    onConfirm=(action 'deleteItem' this.value index)
                  }}
                    <span class='fa fa-times'></span>
                    Delete
                  {{/control/md-button-confirm}}
                </div>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan={{add-em (if this.hideIndex 1 2) this.columnArray.length}}>
                <button
                  type='button'
                  id='{{this.panelId}}-btn'
                  class='btn btn-xs btn-info'
                  {{action 'addItem' this.value}}
                >
                  {{fa-icon 'plus'}}
                  Add
                  {{this.title}}
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class='panel panel-default {{if this.shadow "box-shadow--4dp"}}'>

      <div class='panel-heading'>
        <h3 class='panel-title md-panel-chevron'>
          <a
            data-toggle='collapse'
            aria-expanded={{if this.collapsed 'false' 'true'}}
            class={{if this.collapsed 'collapsed'}}
            href='{{this.panelId}}'
            aria-controls='{{this.panelId}}'
          >
            <span class='fa'></span>
            {{unless this.pluralTitle (pluralize this.title) this.pluralTitle}}
            <div class='label label-pill {{this.pillColor}}'> {{this.value.length}} </div>
          </a>
          <button
            type='button'
            id='{{this.panelId}}-btn'
            class='btn btn-xs btn-info pull-right'
            {{action 'addItem'}}
          >
            {{fa-icon 'plus'}}
            Add
          </button>
        </h3>
      </div>

      <div
        id={{this.panelId}}
        class='panel-collapse {{if this.collapsed "collapse" "in"}}'
      >
        <div class='panel-body {{if this.responsive "table-responsive"}}'>
          {{! template-lint-disable table-groups }}
          <table
            class='table table-striped table-hover fadeIn md-table-align-middle'
          >
            {{#if this.columnArray}}
              <thead>
                <tr>
                  {{#unless this.hideIndex}}
                    <th>#</th>
                  {{/unless}}
                  {{#each this.columnArray as |prop|}}
                    <th>{{uc-words prop}}</th>
                  {{/each}}
                  <th></th>
                </tr>
              </thead>
            {{/if}}
            <tbody>
              {{#each this.arrayValues as |item index|}}
                <tr>
                  {{#unless this.hideIndex}}
                    <td>{{index}}</td>
                  {{/unless}}
                  {{yield (hash item=item index=index profilePath=this.profilePath)}}
                  <td>
                    <div class='md-button-column'>
                      {{!-- <button type="button" class="btn btn-xs btn-danger" {{action "deleteItem" value index}}>
                                              <span class="fa fa-times"></span> Delete
                                          </button> --}}
                      {{#control/md-button-confirm
                        class='btn btn-xs btn-danger'
                        disabled=(if this.simple (if item.value null 'disabled'))
                        onConfirm=(action 'deleteItem' item index)
                      }}
                        <span class='fa fa-times'></span>
                        Delete
                      {{/control/md-button-confirm}}
                    </div>
                  </td>
                </tr>
              {{else}}
                <tr>
                  <td colspan={{add-em (if this.hideIndex 1 2) this.columnArray.length}}>
                    <button
                      type='button'
                      id='{{this.panelId}}-btn'
                      class='btn btn-xs btn-info'
                      {{action 'addItem'}}
                    >
                      {{fa-icon 'plus'}}
                      Add
                      {{this.title}}
                    </button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

    </div>
  {{/if}}
{{else}}
  {{control/md-alert-table
    title=this.title
    required=this.required
    addItem=(action 'addItem')
    target=this.arrayValues
    tipMessage=this.alertTipMessage
  }}
{{/unless}}