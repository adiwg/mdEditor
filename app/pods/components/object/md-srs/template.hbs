{{input/md-codelist
  create=true
  label='Reference System Type'
  tooltip=true
  icon=false
  disabled=false
  allowClear=true
  showValidations=true
  mdCodeName='referenceSystemType'
  path='refType'
  model=this
  placeholder='Select type of reference system used.'
  profilePath=(concat this.profilePath '.referenceSystemType')
  class=(if (v-get this 'isInvalid') 'required')
}}

{{#if this.model.referenceSystemIdentifier}}

  {{#layout/md-card
    collapsible=false
    collapsed=false
    data-spy=false
    shadow=false
    profilePath=(concat this.profilePath '.referenceSystemIdentifier')
  }}
    <label
      class={{concat 'text-info' (if (v-get this 'isInvalid') ' required')}}
    >Reference System Identifier</label>

    {{object/md-identifier
      model=this.model.referenceSystemIdentifier
      profilePath=(concat this.profilePath '.referenceSystemIdentifier')
      data-spy=false
    }}
  {{/layout/md-card}}
{{/if}}

{{yield}}