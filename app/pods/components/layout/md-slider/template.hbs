<button
  type='button'
  class='close huge-text'
  aria-label='Close'
  {{action 'toggleVisibility'}}
>
  Close
  <FaIcon @icon='angle-right' />
</button>
<section class='md-slider-body'>
  {{#from-elsewhere name=name as |slider|}}
    <h3 class='text-info'>{{slider.title}}</h3>
    <hr />
    {{component slider.body}}
  {{/from-elsewhere}}
</section>
{{yield}}