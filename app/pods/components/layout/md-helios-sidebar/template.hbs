<Hds::SideNav isCollapsible={{true}}>
  <:header>
    <Hds::SideNav::Header>
      <:logo>
        <Layout::MdHomeLink @route='dashboard' @ariaLabel='mdEditor home'>
         <Layout::MdSvgLogo />
        </Layout::MdHomeLink>
      </:logo>
      <:actions>
        <Hds::Dropdown
          @enableCollisionDetection={{true}}
          @width='250px'
          as |dd|
        >
          <dd.ToggleIcon @icon='help' @text='settings menu' />
          <dd.Title @text='Help & Support' />
          <dd.Separator />
          <dd.Description
            @text='The mdEditor is a web application that allows users to author and
            edit metadata for projects and datasets. The primary design goal is
            to develop an editor that will allow creation and management of
            archival quality metadata without requiring extensive knowledge of
            metadata standards.'
          />

          <dd.Footer @hasDivider={{true}}>
            <Hds::Button
              class='md-help-sidebar-action'
              @text='View User Manual'
              @icon='docs'
              size='large'
              @isFullWidth={{true}}
              @href='https://guide.mdeditor.org/'
              @isHrefExternal={{true}}
            />
            <Hds::Button
              class='md-help-sidebar-action'
              @isFullWidth={{true}}
              @text='Tour'
              @icon='provider'
              size='large'
              disabled
            />
          </dd.Footer>
        </Hds::Dropdown>
      </:actions>
    </Hds::SideNav::Header>
    <Hds::Separator />
  </:header>
  <:body>
    <Hds::SideNav::Portal::Target @target='baseNavigation' />
  </:body>
</Hds::SideNav>

<Hds::SideNav::Portal @name='baseNavigation' @ariaLabel='Primary' as |Nav|>
  <div class='hds-side-nav-body__primary_nav'>
    <Nav.Link
      @icon='dashboard'
      @text='Dashboard'
      @isActive={{false}}
      @route='dashboard'
    />
    <Nav.Link
      @icon='upload'
      @text='Import'
      @isActive={{false}}
      @route='import'
    />
    <Nav.Link
      @icon='download'
      @text='Export'
      @isActive={{false}}
      @route='export'
    />
    <Nav.Link
      @icon='government'
      @text='Publish'
      @isActive={{false}}
      @route='publish'
    />
    <Nav.Link
      @text='Settings'
      @icon='settings'
      @href='#'
      @isActive={{false}}
      @route='settings'
    />
    <Nav.Title>Data Records</Nav.Title>
    <Nav.Link
      @text='Records'
      @icon='file-text'
      @route='records'
      @hasSubItems={{true}}
    />
    <Nav.Link
      @text='Contacts'
      @icon='users'
      @route='contacts'
      @hasSubItems={{true}}
    />
    <Nav.Link
      @text='Dictionaries'
      @icon='docs'
      @route='dictionaries'
      @hasSubItems={{true}}
    />
  </div>
</Hds::SideNav::Portal>