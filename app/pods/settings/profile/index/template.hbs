<div class='section-header'>
  <h3>
    Manage Profiles
  </h3>
</div>
<div class='card-block'>
  {{#if this.profile}}
    <h4 class='tab-header'>
      {{#simple-if this.profile use='fade' growDuration=100 class='inline-block'}}
        {{#if this.profile.isNew}}
          Add Profile
        {{else}}
          {{concat 'Edit ' this.profile.title}}
        {{/if}}
      {{/simple-if}}
      <hr />
    </h4>
  {{/if}}

  {{#simple-if this.profile use='fade'}}
    {{#if this.profile.isNew}}
      <Object::MdProfile::Custom @record={{this.profile}} />
    {{else if this.profile}}
      {{#if this.profile.validations.hasWarnings}}
        <div class='alert alert-warning' role='alert'>
          <FaIcon @icon="exclamation-triangle" /> {{#each this.profile.validations.warningMessages as |message|}}
            <span>{{message}} </span>
          {{/each}}
        </div>
      {{/if}}
      <Object::MdProfile::Custom @record={{this.profile}} />
    {{/if}}
  {{else}}
    <Control::MdEditTable @data={{this.model}} @dataColumns={{this.columns}} @columnSets={{this.columnSets}} @rowBodyComponent="object/md-profile/form" @pageSize={{25}} @editRow={{action "editProfile"}} @actionBadges={{this.badges}} />
    <div class='card-block'>
      <div class='form-group'>
        <label for='profileUrl'>Load Profile[s] from URL</label>
        <Input @id="profileUrl" @type="text" @value={{this.profileUrl}} class="form-control" placeholder="Enter URL" />
      </div>
      <button class='btn btn-primary' {{action 'loadProfilesFromUrl'}}>
        Load Profile[s]
      </button>
    </div>
  {{/simple-if}}
</div>

{{#if this.profile}}
  {{#if this.profile.isNew}}
    <ToElsewhere @named="md-subbar-settings" @send={{component
        'control/md-button'
        text=(if this.profile.isNew 'Save Profile' 'Update Profile')
        icon='floppy-o'
        disabled=this.disableSave
        class='btn-success btn-lg'
        click=(action 'saveProfile')
      }} />
  {{/if}}
  <ToElsewhere @named="md-subbar-settings" @send={{component
      'control/md-button'
      text=(if this.profile.isNew 'Cancel' 'Back to List')
      icon=(if this.profile.isNew 'undo' 'arrow-left')
      class=(if this.profile.isNew 'btn-warning btn-lg' 'btn-primary btn-lg')
      click=(action 'cancelEdit')
    }} />
{{else}}
  <ToElsewhere @named="md-subbar-settings" @send={{component
      'control/md-button'
      text='Add Profile'
      icon='plus'
      class='btn-success btn-lg'
      click=(action 'addProfile')
      disabled=(if this.profile true)
    }} />
  <ToElsewhere @named="md-subbar-settings" @send={{component
      'control/md-button'
      text='Manage Definitions'
      icon='gear'
      class='btn-primary btn-lg'
      click=(action 'manageDefinitions')
    }} />
{{/if}}