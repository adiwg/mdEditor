{{#with this.model.json.metadata.resourceInfo as |resource|}}
<div class="row md-no-spotlight">
    <div class="col-sm-9 col-md-offset-1">
        <h3>
        <FaIcon @icon={{this.model.icon}} class="text-muted" />
        Viewing Record: {{this.model.title}}
        <Control::MdStatus @model={{this.model}} />
        </h3>

        <Layout::MdCard @shadow={{false}} @muted={{true}} @title="Main" @bodyIsRow={{false}} @collapsible={{true}} @btnText="Edit" @btnClass="success" @btnAction={{fn this.linkTo "record.show.edit.main"}} @btnIcon="pencil">
          <div class="row">
            <dl class="dl-horizontal col-xxl-8">
                <Control::MdDefinition @title="Record Id" @text={{this.model.recordId}} />
                <Control::MdDefinition @title="Record Title" @text={{this.model.title}} />
                <Control::MdDefinition @title="Status" @text={{if resource.status (join ", " resource.status)}} />
                <Control::MdDefinition @title="Contact Instructions" @text={{this.model.json.contactInstructions}} />

            </dl>
            <dl class="dl-horizontal col-xxl-4">
                <Control::MdDefinition @title="Resource Type(s)">
                    {{#each resource.resourceType as |type|}}
                        {{type.type}}:
                        {{#if type.name}}
                            {{type.name}}
                        {{else}}
                            <em>Not named</em>
                        {{/if}}
                        <br>
                        {{else}}
                            <em class="text-muted">No types assigned!</em>
                    {{/each}}
                </Control::MdDefinition>
            </dl>
            <div class="col-xs-12">
              <Layout::MdCard @shadow={{false}} @muted={{true}} @plain={{true}}>
                <div class="row">
                  <div class="text-info col-xs-6 col-sm-3">Default Resource Locale</div>
                  <div class="col-xs-6 col-sm-3">
                    <label class="text-nowrap">Character Set:</label>
                    <span class="text-nowrap">{{resource.defaultResourceLocale.characterSet}}</span>
                  </div>
                  <div class="col-xs-6 col-sm-3">
                    <label>Country:</label>
                    <span class="text-nowrap">{{resource.defaultResourceLocale.country}}</span>
                  </div>
                  <div class="col-xs-6 col-sm-3">
                    <label>Language:</label>
                    <span>{{resource.defaultResourceLocale.language}}</span>
                  </div>
                </div>
              </Layout::MdCard>
            </div>
          </div>

          <Layout::MdCard @shadow={{false}} @muted={{true}} @title="Abstract" @collapsible={{true}} @scroll={{true}} @maximizable={{true}} @class="md-embedded">
              {{md-markdown resource.abstract "Abstract not provided!"}}
          </Layout::MdCard>

          <Layout::MdCard @shadow={{false}} @muted={{true}} @title="Short Abstract" @collapsible={{true}} @scroll={{false}} @class="md-embedded">
              {{md-markdown resource.shortAbstract "Short Abstract not provided!"}}
          </Layout::MdCard>

        </Layout::MdCard>

        <Layout::MdCard @shadow={{false}} @muted={{true}} @title="Geographic Extent" @bodyIsRow={{false}} @collapsible={{true}} @btnText="Edit" @btnClass="success" @btnAction={{fn this.linkTo "record.show.edit.extent"}} @btnIcon="pencil">

        <section>
          {{#each resource.extent as |extent index|}}
            <div class="row md-extent-container">
              <div class="col-sm-12">
                <h4 class="text-info">
                  Geographic Extent #{{index}}
                </h4>
              </div>
              <div class="col-sm-6">
                <label class="">
                  Description
                </label>
                <p>
                  {{get-property extent "description"}}
                </p>
              </div>
              <div class="col-sm-6 md-extent-map">
                {{#if extent.geographicExtent.0.geographicElement.length}}
                  <LeafletMap @lat={{0}} @lng={{0}} @zoom={{2}} @maxZoom={{18}} @onLoad={{fn this.setupMap extent.geographicExtent.0.geographicElement}}>
                    {{!-- Specify child layer components here --}}
                    <LayerGroup @name="Terrain" @baselayer={{true}} @default={{true}}>

                      {{!-- tile-layer url="http://{s}.tile.stamen.com/terrain/{z}/{x}/{y}.png" attribution=mapAttribution --}}

                      {{!-- tile-layer url="//stamen-tiles-{s}.a.ssl.fastly.net/terrain/{z}/{x}/{y}.png" attribution=mapAttribution --}}

                      <TileLayer @url="//tiles.stadiamaps.com/tiles/stamen_terrain/{z}/{x}/{y}.png" @attribution={{this.mapAttribution}} />

                    </LayerGroup>

                    <FeatureGroup @name="Features" @default={{true}}>
                      {{#each extent.geographicExtent.0.geographicElement as |l|}}
                        <GeojsonLayer @geoJSON={{l}} />
                      {{/each}}
                    </FeatureGroup>

                    {{layer-control}}
                  </LeafletMap>
                {{else}}
                  <div class="alert alert-info">
                    No Features to display.
                  </div>
                {{/if}}
              </div>
            </div>
            {{else}}
            <h3 class="alert alert-info">No geographic extents found.
            </h3>
            {{/each}}
        </section>

        </Layout::MdCard>

        {{outlet}}
    </div>
    <div class="md-control-sidebar col-sm-2 hidden-print no-nav">
      <Control::MdCrudButtons @model={{this.model}} @allowCopy={{true}} @allowDelete={{true}} @doDelete={{this.destroyRecord}} @doCopy={{this.copyRecord}}>
        <LinkTo @route="record.show.edit" @model={{this.model.id}} class="btn btn-lg btn-success">
          <FaIcon @icon="pencil" /> Edit</LinkTo>
      </Control::MdCrudButtons>
      <hr>
      <LinkTo @route="records" class="btn btn-lg btn-primary btn-block">
      <FaIcon @icon="list" /> Show List</LinkTo>

      <Control::MdScrollSpy @scrollInit={{this.scrollTo}} @setScrollTo={{this.setScrollTo}} @refresh={{this.model.profile}} />
    </div>
</div>
{{/with}}