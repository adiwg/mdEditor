<h4 class='section-header'>Editing Platform #{{platformId}}
  {{control/md-status model=(compute (route-action 'parentModel'))}}
</h4>
{{#with model as |platform|}}
  <div class=''>
    {{object/md-platform
      model=platform
      profilePath='record.acquisition.platform'
    }}
    {{outlet}}
  </div>
{{/with}}
{{to-elsewhere
  named='md-subbar-extra'
  send=(component
    'control/subbar-link'
    text='Back to Acquisition Object'
    icon='arrow-left'
    click=(route-action 'goBack')
  )
}}
{{to-elsewhere
  named='md-scroll-spy-record-edit'
  send=(component
    'control/md-scroll-spy'
    scrollInit=scrollTo
    setScrollTo=(route-action 'setScrollTo')
  )
}}