<h4 class="section-header">
  Editing Associated Resource #{{this.resourceId}}
  <Control::MdStatus @model={{this.parentModel}} />
</h4>

<Object::MdAssociated @model={{this.model}} @recordId={{this.parentModel.recordId}} @profilePath="record.associated" @editLinked={{route-action "editLinked"}} />

<ToElsewhere @named="md-subbar-extra" @send={{component "control/subbar-citation"
    text="Back to Resource List"
    icon="arrow-left"
    route="record.show.edit.associated"
    selectResource=(route-action "selectResource")
  }} />

<ToElsewhere @named="md-slider-content" @send={{hash
    title=(concat "Click row to select a resource: " this.model.associationType)
    body=(component "control/md-select-table"
      select=(route-action "insertResource")
      data=(compute (route-action "sliderData"))
      columns=(compute (route-action "sliderColumns"))
    )
  }} />

<ToElsewhere @named="md-scroll-spy-record-edit" @send={{component "control/md-scroll-spy"  scrollInit=this.scrollTo setScrollTo=(route-action "setScrollTo")}} />
