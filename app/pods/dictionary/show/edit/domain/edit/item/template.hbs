<h4 class='section-header'>
  Editing Domain Item
  {{#if this.model.name}}
    <em>{{this.model.name}}</em>
  {{else}}
    #{{this.itemId}}
  {{/if}}
  {{!-- <span class="small">for <em>{{parentModel.codeName}}</em></span> --}}
  {{control/md-status model=this.parentModel}}
</h4>

{{object/md-domainitem
  class=''
  model=this.model
  profilePath='dictionary.domain.domainItem'
}}

{{to-elsewhere
  named='md-subbar-extra'
  send=(component
    'control/subbar-link'
    text='Back to Domain'
    icon='arrow-left'
    type='primary'
    click=(route-action 'backToDomain')
  )
}}

{{to-elsewhere
  named='md-scroll-spy-dict-edit'
  send=(component
    'control/md-scroll-spy'
    scrollInit=this.scrollTo
    setScrollTo=(route-action 'setScrollTo')
  )
}}