<div class='row'>
  <div class='col-sm-10'>
    <h3 class='text-info'>Export Data</h3>
    {{#each this.model.records as |section index|}}
      {{#if section.length}}
        {{#if index}}
          <hr />
        {{/if}}

        <Layout::MdCard
          @title={{section.meta.title}}
          @titleIcon='check-square'
          @collapsible={{true}}
          @collapsed={{false}}
          @data-spy={{section.meta.title}}
          @shadow={{true}}
        >
          {{!-- <h3>{{section.meta.title}}</h3> --}}
          <Control::MdRecordTable
            @data={{section}}
            @dataColumns={{compute this.getColumns section.meta.type}}
          />

        </Layout::MdCard>
      {{else}}
        <div class='alert alert-info'>
          <h3>{{fa-icon section.meta.icon}}
            No
            <em>{{section.meta.title}}</em>
            found.</h3>
        </div>
      {{/if}}
    {{/each}}
  </div>
  <div class='md-control-sidebar col-sm-2 no-nav'>
    <div
      class='btn-group-vertical center-block'
      role='group'
      aria-label='Export Button Controls'
    >
      <button
        type='button'
        class='btn btn-lg btn-primary md-btn-responsive'
        {{on 'click' this.exportData}}
      >
        <FlightIcon @name='sign-out' />
        Export All
      </button>
      <button
        type='button'
        class='btn btn-lg btn-info md-btn-responsive'
        {{on 'click' (fn this.exportSelectedData false)}}
        disabled={{if this.hasSelected false true}}
      >
        <FlightIcon @name='check-square' />
        Export Selected
      </button>
      <button
        type='button'
        class='btn btn-lg btn-success md-btn-responsive'
        {{on 'click' (fn this.exportSelectedData true)}}
        disabled={{if this.hasSelectedRecords false true}}
      >
        <FlightIcon @name='check-square' />
        Export as mdJSON</button>
    </div>
    <hr />
    <label class='center-block text-center'>Include Settings?</label>
    <XToggle
      @value={{this.model.settings._selected}}
      @onToggle={{fn (mut this.model.settings._selected)}}
      @showLabels={{true}}
      @onLabel='Yes'
      @offLabel='No'
      @size='medium'
      @theme='form'
    />
    <hr />
    <Control::MdScrollSpy
      @offset={{130}}
      @scrollInit={{this.scrollTo}}
      @setScrollTo={{this.setScrollTo}}
    />
  </div>
</div>
{{outlet}}