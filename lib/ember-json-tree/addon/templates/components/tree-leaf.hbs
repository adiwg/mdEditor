{{#if inTree}}
  {{#unless model.isRoot}}
    <span class='tree-cell text-nowrap'>
      {{#each (range 1 nodeDepth)}}
        <span class='tree-indent'></span>
      {{/each}}
    </span>
  {{/unless}}

  <span
    class='tree-cell tree-icon'
    role='button'
    {{action 'toggleCheck' bubbles=false}}
  >
    {{#if model.draggable}}
      {<FlightIcon @name='more-vertical' />
    {{/if}}
  </span>

  {{#unless disableCheck}}
    {{#unless model.hideCheck}}
      <span
        class='tree-cell tree-icon'
        role='button'
        {{action 'toggleCheck' bubbles=false}}
      >
        {{#if model.checkable}}
          <FlightIcon @name={{if model.isChecked 'check-square' 'square'}} />
        {{else}}
          <span class='icon fa fa-fw'></span>
        {{/if}}
      </span>
    {{/unless}}
  {{/unless}}

  {{#unless model.hideToggle}}
    <span class='tree-cell tree-icon'>
      <span
        class='toggle-icon'
        role='button'
        {{action 'toggleExpand' bubbles=false}}
      >
        {{#if model.children.length}}
          <FlightIcon @name={{if model.isExpanded 'minus' 'plus'}} />
        {{else}}
          <span class='icon fa fa-fw'></span>
        {{/if}}
      </span>
    </span>
  {{/unless}}

  <span class='tree-cell tree-fill'>
    <span class='tree-cell'>
      {{tree-label
        model=model
        labelComponent=labelComponent
        nodePath=nodePath
        selected=selected
      }}
    </span>
  </span>
  {{#if model.definition}}
    <span class='tree-cell'>
      <span class='badge'>?
        {{ember-tooltip text=model.definition side='right'}}
      </span>
    </span>
  {{/if}}
{{else}}
  {{tree-label
    labelComponent=labelComponent
    model=model
    nodePath=nodePath
    selected=selected
    highlight=highlight
  }}
{{/if}}